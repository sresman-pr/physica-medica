---
import BaseLayout from '../../layouts/BaseLayout.astro';
import FAQSection from '../../components/FAQSection.astro';
import AuthorByline from '../../components/AuthorByline.astro';
import '../../styles/service-pages.css';
import { Image } from 'astro:assets';

// Import images for optimization
import strengthTrainingImg from '../../images/Baltimore-Physical-Therapist-strength-training.jpg';
import ryanHeadShotImg from '../../images/Ryan Head Shot.jpg';
import pancafitImg from '../../images/9c4fc8_8d94887cd5bf4effac88b33980830d26~mv2.png';
import dryNeedlingImg from '../../images/Baltimore-Physical-Therapist-dry-needling.jpg';

const pageTitle = "Baltimore Personal Training | Biomechanics & Movement | Physica Medica";
const pageDescription = "Unique personal training integrating biomechanics, fascia, and evolutionary movement. $200 out-of-network premium care. 60-minute 1-on-1 sessions with Dr. Maksim Birikov, DPT in Baltimore.";

const breadcrumbs = [
  { name: "Home", url: "/" },
  { name: "Services", url: "/services" },
  { name: "Personal Training", url: "/services/personal-training" }
];

const serviceSchema = {
  "@type": "MedicalTherapy",
  "name": "Personal Training - Biomechanics Focus",
  "description": "Unique approach to personal training that integrates your body as a system, optimizing biomechanics with respect to evolutionary movement requirements",
  "provider": { "@id": "https://physicamedica.net/#business" },
  "areaServed": {
    "@type": "City",
    "name": "Baltimore",
    "containedInPlace": "Maryland"
  }
};

const faqs = [
  {
    question: "How is Physica Medica personal training different from a regular gym?",
    answer: "Unlike conventional personal training that focuses only on muscles, we take a systems-based approach that integrates biomechanics, fascia, and gravity. We correct movement dysfunctions that contribute to pain while improving performance and body aesthetics."
  },
  {
    question: "Do I need physical therapy experience to start personal training?",
    answer: "No experience necessary. Dr. Maks customizes each program to your current fitness level and movement capabilities. Whether you're recovering from injury or looking to optimize athletic performance, we meet you where you are."
  },
  {
    question: "How long are personal training sessions?",
    answer: "Each session is a full 60 minutes one-on-one with Dr. Maks. This extended time allows for proper warm-up, movement assessment, corrective exercises, and education about optimal biomechanics."
  },
  {
    question: "Can personal training help with chronic pain?",
    answer: "Absolutely. Many chronic pain conditions stem from movement dysfunctions and poor biomechanics. Our training corrects these patterns, often eliminating pain while improving strength and function."
  },
  {
    question: "What makes evolutionary movement requirements important?",
    answer: "Humans evolved to move in specific ways. Modern sedentary lifestyles create dysfunction. By respecting our evolutionary movement requirements, we can move with minimal wear and tear on the body while maximizing performance."
  }
];
---

<BaseLayout title={pageTitle} description={pageDescription} schema={serviceSchema} breadcrumbs={breadcrumbs}>
  <!-- Modern Hero Section -->
  <section class="service-hero-modern">
    <div class="hero-overlay"></div>
    <div class="hero-image-bg">
      <Image 
        src={strengthTrainingImg}
        alt="Personal training at Physica Medica"
        width={351}
        height={220}
        widths={[400, 700]}
        format="webp"
        loading="eager"
        fetchpriority="high"
        quality={85}
      />
    </div>
    <div class="container-narrow hero-content-modern">
      <h1>Personal Training</h1>
      <p class="hero-subtitle-modern">Biomechanics-Based Movement Optimization</p>
      <a href="/schedule" class="hero-cta-button">Start Your Training</a>
    </div>
  </section>

  <!-- Benefits Section -->
  <section class="benefits-section">
    <div class="container-narrow">
      <h2 class="section-title-center">Why Train With Us?</h2>
      <div class="benefits-grid">
        <div class="benefit-card">
          <div class="benefit-icon">üéØ</div>
          <h3>Systems-Based Approach</h3>
          <p>Integrate biomechanics, fascia, and gravity for optimal movement</p>
        </div>
        <div class="benefit-card">
          <div class="benefit-icon">‚è±Ô∏è</div>
          <h3>Full 60 Minutes</h3>
          <p>Complete attention from a Doctor of Physical Therapy</p>
        </div>
        <div class="benefit-card">
          <div class="benefit-icon">üí™</div>
          <h3>Pain-Free Performance</h3>
          <p>Build strength while eliminating movement dysfunctions</p>
        </div>
        <div class="benefit-card">
          <div class="benefit-icon">üî¨</div>
          <h3>DPT-Level Assessment</h3>
          <p>Identify and correct issues before they cause injury</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Trainer Section -->
  <section class="trainer-section section-spacing">
    <div class="container-narrow">
      <div class="trainer-grid">
        <div class="trainer-image">
          <Image 
            src={ryanHeadShotImg}
            alt="Personal trainer"
            width={242}
            height={538}
            format="webp"
            loading="lazy"
            quality={60}
            class="professional-image"
          />
        </div>
        <div class="trainer-content">
          <h2>Expert Training</h2>
          <p>Work one-on-one with experienced trainers who understand biomechanics, movement patterns, and how to optimize your body as an integrated system.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Philosophy Section -->
  <section class="philosophy-highlight section-spacing">
    <div class="container-narrow">
      <h2 class="text-center">Unique approach to personal training:</h2>
      <div class="philosophy-grid">
        <div class="philosophy-item">
          <div class="icon">‚úì</div>
          <p>Optimize your biomechanics with respects to our evolutionary movement requirements</p>
        </div>
        <div class="philosophy-item">
          <div class="icon">‚úì</div>
          <p>Integrates your body as a system</p>
        </div>
        <div class="philosophy-item">
          <div class="icon">‚úì</div>
          <p>Improve communication between the muscles, fascia and gravity</p>
        </div>
        <div class="philosophy-item">
          <div class="icon">‚úì</div>
          <p>Correct movement dysfunctions that contribute to pain, improve posture, improve body aesthetics</p>
        </div>
        <div class="philosophy-item">
          <div class="icon">‚úì</div>
          <p>Move with minimal wear and tear on the body</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <section class="service-content section-spacing">
    <div class="container-narrow">
      <h2>What is Biomechanics-Based Training?</h2>
      <p>Biomechanics-based training goes beyond traditional personal training by addressing how your body moves as an integrated system. Rather than isolating muscles, we optimize movement patterns that respect your body's evolutionary design, improve fascial connections, and enhance communication between all body systems.</p>

      <h2>How Physica Medica is Different</h2>
      <p>Dr. Maks brings a unique combination of physical therapy expertise and movement science to every personal training session:</p>
      <ul>
        <li><strong>60 Full Minutes:</strong> Unlike 30-minute sessions at corporate gyms, you get Dr. Maks's complete attention</li>
        <li><strong>DPT-Level Assessment:</strong> Identify and correct movement dysfunctions before they cause injury</li>
        <li><strong>Pain-Free Performance:</strong> Build strength and aesthetics while eliminating pain patterns</li>
        <li><strong>Sustainable Results:</strong> Learn to move with minimal wear and tear for lifelong fitness</li>
      </ul>

      <h2>Who Benefits Most</h2>
      <p>Personal training at Physica Medica is ideal for Baltimore residents who:</p>
      <ul>
        <li>Experience pain during traditional workouts</li>
        <li>Want to improve posture and body aesthetics simultaneously</li>
        <li>Are recovering from injury and need expert guidance</li>
        <li>Seek athletic performance optimization</li>
        <li>Work desk jobs and need movement dysfunction correction</li>
        <li>Want sustainable fitness that respects body mechanics</li>
      </ul>

      <h2>The Training Process</h2>
      <p>Each personal training program at Physica Medica includes:</p>
      <ol>
        <li><strong>Movement Assessment:</strong> Comprehensive analysis of your current biomechanics and dysfunctions</li>
        <li><strong>Customized Programming:</strong> Exercises designed for your body's specific needs and goals</li>
        <li><strong>Corrective Integration:</strong> Address fascial restrictions and movement compensations</li>
        <li><strong>Progressive Loading:</strong> Build strength while maintaining optimal biomechanics</li>
        <li><strong>Education:</strong> Understand how to move optimally in daily life and sport</li>
      </ol>

      <div class="cta-box-modern">
        <div class="cta-icon">üí´</div>
        <h3>Transform Your Movement</h3>
        <p>Experience personal training that respects your body's design while achieving your aesthetic and performance goals.</p>
        <a href="/schedule" class="cta-button">Schedule Training Session</a>
      </div>
    </div>
  </section>

  <!-- Author Byline -->
  <div class="container-narrow">
    <AuthorByline />
  </div>

  <!-- FAQ Section -->
  <FAQSection faqs={faqs} title="Personal Training FAQs" />

  <!-- Related Services -->
  <section class="related-services-modern">
    <div class="container-narrow">
      <h2 class="section-title-center">You Might Also Like</h2>
      <div class="related-grid-modern">
        <a href="/services/pancafit-class" class="related-card-modern">
          <div class="related-card-image">
            <Image 
              src={pancafitImg}
              alt="Pancafit class"
              width={117}
              height={105}
              format="webp"
              loading="lazy"
              quality={70}
            />
          </div>
          <div class="related-card-content">
            <h3>Pancafit Class</h3>
            <p>Postural correction foundation</p>
            <span class="card-arrow">‚Üí</span>
          </div>
        </a>
        <a href="/services/specialty-techniques" class="related-card-modern">
          <div class="related-card-image">
            <Image 
              src={dryNeedlingImg}
              alt="Specialty techniques"
              width={355}
              height={224}
              format="webp"
              loading="lazy"
              quality={70}
            />
          </div>
