---
import BaseLayout from '../../layouts/BaseLayout.astro';
import WatermarkBackground from '../../components/WatermarkBackground.astro';
import { Image } from 'astro:assets';

// Import service images from src/images (Astro Image)
import iastmImg from '../../images/Baltimore-Physical-Therapist-instrument-tissue-mobilization.jpg';
import pregnancyImg from '../../images/Baltimore-Physical-Therapist-pregnancy.jpg';
import strengthTrainingImg from '../../images/Baltimore-Physical-Therapist-strength-training.jpg';
import specialtyImg from '../../images/specialty-v3-neural-mobilization.jpg';
import scoliosisImg from '../../images/Baltimore-Physical-Therapist-scoliosis.jpg';
import functionalPatternsImg from '../../images/specialty-v3-posture-exercise.jpg';

const pageTitle = "Physical Therapy Treatments Baltimore | Physica Medica";
const pageDescription = "Comprehensive physical therapy treatments including dry needling, cupping, manual therapy, IASTM, pregnancy care, posture correction & more in Baltimore, MD.";
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <WatermarkBackground variant="teal" angle={-10} />
  
  <section class="services-hero section-spacing">
    <div class="container-narrow text-center">
      <h1>Physical Therapy Treatments in Baltimore</h1>
      <p class="lead">Specialized one-on-one treatments tailored to your unique needs</p>
    </div>
  </section>

  <section class="services-grid-section">
    <div class="container">
      <div class="services-grid">
        <!-- 1. Dry Needling -->
        <a href="/services/dry-needling" class="service-card">
          <img 
            src="/images/Baltimore-Physical-Therapist-dry-needling.jpg"
            alt="Dry Needling"
            width="355"
            height="224"
            loading="lazy"
          />
          <h2>Dry Needling</h2>
          <p>Fast pain relief for muscle tension and trigger points. One of the most effective ways to quickly reduce tension and restore mobility.</p>
          <span class="service-link">Learn More →</span>
        </a>

        <!-- 2. Myofascial Cupping -->
        <a href="/services/myofascial-cupping" class="service-card">
          <img 
            src="/images/Baltimore-Physical-Therapist-myofascial-cupping.jpg"
            alt="Myofascial Cupping"
            width="351"
            height="220"
            loading="lazy"
          />
          <h2>Myofascial Cupping</h2>
          <p>Release tight fascia and accelerate recovery. Increases blood flow and tissue mobility for faster healing and improved movement.</p>
          <span class="service-link">Learn More →</span>
        </a>

        <!-- 3. Deep Tissue/Sports Massage -->
        <a href="/services/deep-tissue-sports-massage" class="service-card">
          <img 
            src="/images/Baltimore-Physical-Therapist-deep-tissue-sport-message.jpg"
            alt="Deep Tissue & Sports Massage"
            width="351"
            height="220"
            loading="lazy"
          />
          <h2>Deep Tissue/Sports Massage</h2>
          <p>Optimize athletic recovery and performance. Therapeutic massage that reduces soreness and improves flexibility for active lifestyles.</p>
          <span class="service-link">Learn More →</span>
        </a>

        <!-- 4. Instrument Assisted Tissue Mobilization -->
        <a href="/services/instrument-assisted-tissue-mobilization" class="service-card">
          <Image 
            src={iastmImg}
            alt="Instrument Assisted Tissue Mobilization"
            width={351}
            height={220}
            format="webp"
            loading="lazy"
            quality={80}
          />
          <h2>Instrument Assisted Mobilization</h2>
          <p>Break down scar tissue and restore full mobility. Advanced IASTM techniques for lasting pain relief and improved range of motion.</p>
          <span class="service-link">Learn More →</span>
        </a>

        <!-- 5. Pregnancy -->
        <a href="/services/pregnancy-physical-therapy" class="service-card">
          <Image 
            src={pregnancyImg}
            alt="Pregnancy Physical Therapy"
            width={351}
            height={220}
            format="webp"
            loading="lazy"
            quality={80}
          />
          <h2>Pregnancy Physical Therapy</h2>
          <p>Safe, effective care for expecting mothers. Relieve pregnancy discomfort and prepare your body for delivery with specialized treatment.</p>
          <span class="service-link">Learn More →</span>
        </a>

        <!-- 6. Pancafit Class -->
        <a href="/services/pancafit" class="service-card">
          <Image 
            src={strengthTrainingImg}
            alt="Pancafit Class"
            width={351}
            height={220}
            format="webp"
            loading="lazy"
            quality={80}
          />
          <h2>Pancafit Class</h2>
          <p>Group posture training sessions using the Pancafit method to improve flexibility, alignment, and overall body mechanics.</p>
          <span class="service-link">Learn More →</span>
        </a>

        <!-- 7. Scoliosis Treatment -->
        <a href="/services/scoliosis" class="service-card">
          <Image 
            src={scoliosisImg}
            alt="Scoliosis Treatment"
            width={351}
            height={220}
            format="webp"
            loading="lazy"
            quality={80}
          />
          <h2>Scoliosis Treatment</h2>
          <p>Reduce pain and improve posture with specialized spinal care. Expert treatment combining Pancafit correction and hands-on therapy.</p>
          <span class="service-link">Learn More →</span>
        </a>

        <!-- 8. Functional Patterns -->
        <a href="/services/functional-patterns" class="service-card">
          <Image 
            src={functionalPatternsImg}
            alt="Functional Patterns"
            width={351}
            height={220}
            format="webp"
            loading="lazy"
            quality={80}
          />
          <h2>Functional Patterns</h2>
          <p>Fix posture and movement patterns for lasting results. Corrective training that addresses root causes of pain and dysfunction.</p>
          <span class="service-link">Learn More →</span>
        </a>

        <!-- 9. Posture Correction -->
        <a href="/services/posture-correction" class="service-card">
          <Image 
            src={specialtyImg}
            alt="Posture Correction"
            width={351}
            height={220}
            format="webp"
            loading="lazy"
            quality={80}
          />
          <h2>Posture Correction</h2>
          <p>Eliminate pain from poor posture and tech neck. Evidence-based retraining that improves alignment and reduces chronic tension.</p>
          <span class="service-link">Learn More →</span>
        </a>

        <!-- 10. Therapy for Singers -->
        <a href="/services/therapy-for-singers" class="service-card">
          <img 
            src="/images/Baltimore-Physical-Therapist-session.png"
            alt="Therapy for Singers"
            width="355"
            height="224"
            loading="lazy"
          />
          <h2>Therapy for Singers</h2>
          <p>Enhance vocal performance and reduce strain. Specialized treatment for breathing, posture, and singing endurance - unique to the US.</p>
          <span class="service-link">Learn More →</span>
        </a>

        <!-- 11. Scar Tissue Mobilization -->
        <a href="/services/scar-tissue-mobilization" class="service-card">
          <img 
            src="/images/specialty-v3-scar-treatment.jpg"
            alt="Scar Tissue Mobilization"
            width="355"
            height="224"
            loading="lazy"
          />
          <h2>Scar Tissue Mobilization</h2>
          <p>Restore mobility after surgery or injury. Break down adhesions and eliminate pain from restrictive scar tissue.</p>
          <span class="service-link">Learn More →</span>
        </a>

        <!-- 12. Neural Tension Release -->
        <a href="/services/neural-tension-release" class="service-card">
          <img 
            src="/images/specialty-v3-neural-nerve-glide.jpg"
            alt="Neural Tension Release"
            width="355"
            height="224"
            loading="lazy"
          />
          <h2>Neural Tension Release</h2>
          <p>Eliminate radiating pain, numbness, and tingling. Release restricted nerves for lasting relief throughout the body.</p>
          <span class="service-link">Learn More →</span>
        </a>

        <!-- 13. Diaphragmatic Rehabilitation -->
        <a href="/services/diaphragmatic-rehabilitation" class="service-card">
          <img 
            src="/images/specialty-v3-diaphragm-breathing.jpg"
            alt="Diaphragmatic Rehabilitation"
            width="355"
            height="224"
            loading="lazy"
          />
          <h2>Diaphragmatic Rehabilitation</h2>
          <p>Breathe better, move better, sleep better. Restore proper breathing mechanics to reduce tension and improve overall function.</p>
          <span class="service-link">Learn More →</span>
        </a>
      </div>
    </div>
  </section>

  <section class="cta-section section-spacing">
    <div class="container-narrow text-center">
      <h2>Ready to Get Started?</h2>
      <p>Schedule your first one-on-one appointment with Dr. Maks today.</p>
      <a href="/schedule" class="cta-button">Schedule Evaluation</a>
    </div>
  </section>
</BaseLayout>

<style>
  .services-hero,
  .services-grid-section {
    position: relative;
    z-index: 1;
  }

  .services-hero {
    background: transparent;
    color: white;
  }

  .services-hero h1 {
    color: white;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2rem;
    margin: 4rem 0;
  }

  .service-card {
    display: block;
    background: white;
    border-radius: 0.5rem;
    border: 1px solid rgba(0,0,0,0.1);
    border-bottom: 3px solid var(--color-accent);
    box-shadow: var(--shadow-md);
    transition: transform 0.2s, box-shadow 0.2s;
    overflow: hidden;
    position: relative;
    text-decoration: none;
    color: inherit;
    cursor: pointer;
  }

  /* Inner glow effect */
  .service-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.6), transparent);
    pointer-events: none;
    z-index: 1;
  }

  .service-card img {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }

  .service-card:hover {
    transform: translateY(-6px);
    box-shadow: var(--shadow-lg);
  }

  .service-card h2 {
    color: var(--color-primary);
    margin: 1.5rem 2rem 1rem;
  }

  .service-card p {
    padding: 0 2rem;
  }

  .service-link {
    display: inline-block;
    margin: 1rem 2rem 1.5rem;
    color: var(--color-accent);
    font-weight: 600;
    transition: transform 0.2s;
  }

  .service-card:hover .service-link {
    transform: translateX(4px);
  }

  .cta-section {
    background: var(--color-background-light);
    position: relative;
    z-index: 1;
  }

  .lead {
    font-size: 1.25rem;
    color: rgba(255,255,255,0.9);
  }

  .text-center {
    text-align: center;
  }
</style>
