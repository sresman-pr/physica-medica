---
import BaseLayout from '../../layouts/BaseLayout.astro';
import WatermarkBackground from '../../components/WatermarkBackground.astro';
import { Image } from 'astro:assets';

// Import service images from src/images (Astro Image)
import iastmImg from '../../images/Baltimore-Physical-Therapist-instrument-tissue-mobilization.jpg';
import pregnancyImg from '../../images/Baltimore-Physical-Therapist-pregnancy.jpg';
import strengthTrainingImg from '../../images/Baltimore-Physical-Therapist-strength-training.jpg';
import specialtyImg from '../../images/specialty-v3-neural-mobilization.jpg';
import scoliosisImg from '../../images/Baltimore-Physical-Therapist-scoliosis.jpg';

const pageTitle = "Physical Therapy Services in Baltimore | Physica Medica";
const pageDescription = "Comprehensive physical therapy services including dry needling, myofascial cupping, sports massage, IASTM, pregnancy care, and specialty techniques in Baltimore, MD.";
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <WatermarkBackground variant="teal" angle={-10} />
  
  <section class="services-hero section-spacing">
    <div class="container-narrow text-center">
      <h1>Our Services</h1>
      <p class="lead">Specialized physical therapy treatments tailored to your unique needs</p>
    </div>
  </section>

  <section class="services-grid-section">
    <div class="container">
      <div class="services-grid">
        <!-- 1. Dry Needling -->
        <div class="service-card">
          <img 
            src="/images/Baltimore-Physical-Therapist-dry-needling.jpg"
            alt="Dry Needling"
            width="355"
            height="224"
            loading="lazy"
          />
          <h2>Dry Needling</h2>
          <p>Release muscle knots and trigger points with precision needle therapy. One of the most effective and quickest ways to reduce tension and relieve pain.</p>
          <a href="/services/dry-needling" class="service-link">Learn More →</a>
        </div>

        <!-- 2. Myofascial Cupping -->
        <div class="service-card">
          <img 
            src="/images/Baltimore-Physical-Therapist-myofascial-cupping.jpg"
            alt="Myofascial Cupping"
            width="351"
            height="220"
            loading="lazy"
          />
          <h2>Myofascial Cupping</h2>
          <p>Advanced cupping therapy to release fascial restrictions, increase blood flow, and improve tissue mobility for faster recovery.</p>
          <a href="/services/myofascial-cupping" class="service-link">Learn More →</a>
        </div>

        <!-- 3. Deep Tissue/Sports Massage -->
        <div class="service-card">
          <img 
            src="/images/Baltimore-Physical-Therapist-deep-tissue-sport-message.jpg"
            alt="Deep Tissue & Sports Massage"
            width="351"
            height="220"
            loading="lazy"
          />
          <h2>Deep Tissue/Sports Massage</h2>
          <p>Therapeutic massage techniques for athletes and active individuals. Optimize recovery and performance.</p>
          <a href="/services/deep-tissue-sports-massage" class="service-link">Learn More →</a>
        </div>

        <!-- 4. Instrument Assisted Tissue Mobilization -->
        <div class="service-card">
          <Image 
            src={iastmImg}
            alt="Instrument Assisted Tissue Mobilization"
            width={351}
            height={220}
            format="webp"
            loading="lazy"
            quality={80}
          />
          <h2>Instrument Assisted Mobilization</h2>
          <p>Advanced IASTM techniques using specialized tools to break down scar tissue and restore mobility.</p>
          <a href="/services/instrument-assisted-tissue-mobilization" class="service-link">Learn More →</a>
        </div>

        <!-- 5. Pregnancy -->
        <div class="service-card">
          <Image 
            src={pregnancyImg}
            alt="Pregnancy Physical Therapy"
            width={351}
            height={220}
            format="webp"
            loading="lazy"
            quality={80}
          />
          <h2>Pregnancy Physical Therapy</h2>
          <p>Expert care for expecting mothers through one-on-one treatments for pregnancy-related conditions.</p>
          <a href="/services/pregnancy-physical-therapy" class="service-link">Learn More →</a>
        </div>

        <!-- 6. Pancafit Class -->
        <div class="service-card">
          <Image 
            src={strengthTrainingImg}
            alt="Pancafit Class"
            width={351}
            height={220}
            format="webp"
            loading="lazy"
            quality={80}
          />
          <h2>Pancafit Class</h2>
          <p>Group posture training sessions using the Pancafit method to improve flexibility, alignment, and overall body mechanics.</p>
          <a href="/services/pancafit-class" class="service-link">Learn More →</a>
        </div>

        <!-- 7. Scoliosis Treatment -->
        <div class="service-card">
          <Image 
            src={scoliosisImg}
            alt="Scoliosis Treatment"
            width={351}
            height={220}
            format="webp"
            loading="lazy"
            quality={80}
          />
          <h2>Scoliosis Treatment</h2>
          <p>Specialized spinal curve management combining Pancafit postural correction with expert one-on-one DPT care.</p>
          <a href="/services/scoliosis" class="service-link">Learn More →</a>
        </div>

        <!-- 8. Specialty Techniques -->
        <div class="service-card">
          <Image 
            src={specialtyImg}
            alt="Specialty Techniques"
            width={351}
            height={220}
            format="webp"
            loading="lazy"
            quality={80}
          />
          <h2>Specialty Techniques</h2>
          <p>Advanced therapeutic methods including neural tension release, scar tissue mobilization, posture re-education, and therapy for singers.</p>
          <a href="/services/specialty-techniques" class="service-link">Learn More →</a>
        </div>
      </div>
    </div>
  </section>

  <section class="cta-section section-spacing">
    <div class="container-narrow text-center">
      <h2>Ready to Get Started?</h2>
      <p>Schedule your first one-on-one appointment with Dr. Maks today.</p>
      <a href="/schedule" class="cta-button">Schedule Evaluation</a>
    </div>
  </section>
</BaseLayout>

<style>
  .services-hero,
  .services-grid-section {
    position: relative;
    z-index: 1;
  }

  .services-hero {
    background: transparent;
    color: white;
  }

  .services-hero h1 {
    color: white;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2rem;
    margin: 4rem 0;
  }

  .service-card {
    background: white;
    border-radius: 0.5rem;
    border: 1px solid rgba(0,0,0,0.1);
    border-bottom: 3px solid var(--color-accent);
    box-shadow: var(--shadow-md);
    transition: transform 0.2s, box-shadow 0.2s;
    overflow: hidden;
    position: relative;
  }

  /* Inner glow effect */
  .service-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.6), transparent);
    pointer-events: none;
    z-index: 1;
  }

  .service-card img {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }

  .service-card:hover {
    transform: translateY(-6px);
    box-shadow: var(--shadow-lg);
  }

  .service-card h2 {
    color: var(--color-primary);
    margin: 1.5rem 2rem 1rem;
  }

  .service-card p {
    padding: 0 2rem;
  }

  .service-link {
    display: inline-block;
    margin-top: 1rem;
    color: var(--color-accent);
    text-decoration: none;
    font-weight: 600;
    transition: transform 0.2s;
  }

  .service-link:hover {
    transform: translateX(4px);
  }

  .cta-section {
    background: var(--color-background-light);
    position: relative;
    z-index: 1;
  }

  .lead {
    font-size: 1.25rem;
    color: rgba(255,255,255,0.9);
  }

  .text-center {
    text-align: center;
  }
</style>
