    font-family: Georgia, 'Times New Roman', serif;
    font-weight: 400;
    font-style: italic;
  }

  .voice-card p {
    margin: 0;
    font-size: 0.85rem;
    color: var(--theme-warm-gray);
    line-height: 1.5;
  }

