    font-family: Georgia, 'Times New Roman', serif;
    font-weight: 400;
    font-style: italic;
  }

  /* Voice grid - Elegant cards */
  .voice-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 1.25rem;
  }

  .voice-card {
    background: white;
    padding: 1.75rem 1.5rem;
    border-radius: 0;
    text-align: center;
    border: 1px solid rgba(127,29,29,0.15);
    transition: all 0.3s;
  }

  .voice-card:hover {
    border-color: var(--theme-burgundy);
