    background: white;
    padding: 3.5rem 2rem;
    position: relative;
    z-index: 1;
  }

  .content-section-gray {
    background: var(--theme-cream);
    padding: 3.5rem 2rem;
    position: relative;
    z-index: 1;
  }

  .content-section-teal {
    background: linear-gradient(135deg, var(--theme-burgundy) 0%, var(--theme-burgundy-light) 100%);
    padding: 3.5rem 2rem;
    position: relative;
    z-index: 1;
    color: white;
  }

  .content-section-teal h2 { 
    color: var(--theme-cream);
    font-family: Georgia, 'Times New Roman', serif;
    font-style: italic;
    font-weight: 400;
  }

  .container-narrow {
    max-width: 900px;
    margin: 0 auto;
  }

  /* Section titles - Serif, elegant */
  .section-title-center {
    text-align: center;
    color: var(--theme-burgundy);
