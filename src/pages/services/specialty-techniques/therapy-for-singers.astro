    --theme-burgundy-light: #991b1b;
    --theme-cream: #fef7ed;
    --theme-warm-gray: #78716c;
    --theme-gold-accent: #b45309;
  }

  /* Hero Section - Rich burgundy */
  .specialty-hero {
    position: relative;
    background: linear-gradient(135deg, var(--theme-burgundy) 0%, #4a1010 100%);
    padding: 3rem 2rem;
    overflow: hidden;
    z-index: 1;
  }

  .hero-gradient-bg {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(ellipse at 50% 100%, rgba(180,83,9,0.15) 0%, transparent 50%);
    pointer-events: none;
  }

  .hero-centered {
    text-align: center;
    position: relative;
    z-index: 1;
    color: white;
  }

  .hero-centered h1 {
    color: white;
    font-size: 2.75rem;
    margin-bottom: 0.75rem;
    font-family: Georgia, 'Times New Roman', serif;
    font-weight: 400;
    font-style: italic;
    letter-spacing: 1px;
  }

  .specialty-hero .hero-subtitle {
    font-size: 1.15rem;
    opacity: 0.95;
    margin-bottom: 1.5rem;
    color: var(--theme-cream);
    font-style: italic;
  }

  .hero-value-pills {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    justify-content: center;
