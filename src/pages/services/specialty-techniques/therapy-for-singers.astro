    list-style: none;
    padding: 0;
    margin: 1.5rem 0 0;
  }

  .styled-list li {
    padding: 1rem 0;
    border-bottom: 1px solid rgba(127,29,29,0.15);
    line-height: 1.7;
    color: #44403c;
  }

  .styled-list li:last-child {
    border-bottom: none;
  }

  .styled-list li strong {
    color: var(--theme-burgundy);
    font-family: Georgia, 'Times New Roman', serif;
    font-style: italic;
  }

  /* Step cards - Elegant numbered */
  .step-cards {
    display: grid;
    gap: 1.25rem;
    margin: 2rem 0 0;
  }

  .step-card {
    display: flex;
    gap: 1.25rem;
    align-items: flex-start;
