    color: var(--theme-cream);
    font-weight: 400;
    letter-spacing: 1px;
  }

  .hero-cta {
    display: inline-block;
    background: var(--theme-cream);
    color: var(--theme-burgundy);
    padding: 14px 40px;
    text-decoration: none;
    font-weight: 600;
    border-radius: 0;
    transition: all 0.3s;
    font-family: Georgia, 'Times New Roman', serif;
    font-style: italic;
    letter-spacing: 0.5px;
  }

  .hero-cta:hover {
    background: white;
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(0,0,0,0.3);
  }

  .related-services {
    position: relative;
    z-index: 1;
  }

  /* Exclusive banner - Elegant gold accent */
  .exclusive-banner {
    background: linear-gradient(90deg, var(--theme-gold-accent) 0%, #92400e 100%);
    padding: 1rem 2rem;
    position: relative;
    z-index: 1;
  }

  .exclusive-content {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
    text-align: center;
  }

  .exclusive-flag {
    background: white;
    color: var(--theme-burgundy);
    padding: 0.35rem 1rem;
    border-radius: 0;
