---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import WatermarkBackground from '../../../components/WatermarkBackground.astro';
import { Image } from 'astro:assets';

// Import images for technique cards - using clean images without text overlays
import diaphragmImg from '../../../images/wix-diaphragmatic-rehabilitation.png';
import scarTissueImg from '../../../images/wix-scars.png';
import postureImg from '../../../images/wix-posture-re-education.jpg';
import neuralImg from '../../../images/wix-neural-tension-release.jpg';
import singersImg from '../../../images/wix-therapy-for-singers.jpg';

const pageTitle = "Baltimore Specialty Physical Therapy Techniques | Physica Medica";
const pageDescription = "Advanced therapeutic techniques including diaphragmatic rehabilitation, scar tissue mobilization, posture re-education, neural tension release, and therapy for singers. $200 out-of-network premium care with Dr. Maksim Birikov, DPT in Baltimore.";

const breadcrumbs = [
  { name: "Home", url: "/" },
  { name: "Services", url: "/services" },
  { name: "Specialty Techniques", url: "/services/specialty-techniques" }
];

const techniques = [
  {
    title: "Diaphragmatic Rehabilitation",
    description: "Release your body's primary breathing engine to improve spinal mobility, decrease shoulder and neck tension, reduce stress, and improve sleep patterns and posture.",
    image: diaphragmImg,
    alt: "Diaphragmatic breathing exercise therapy",
    href: "/services/specialty-techniques/diaphragmatic-rehabilitation"
  },
  {
    title: "Scar Tissue Mobilization",
    description: "Specialized scar tissue mobilization and remodeling to restore mobility, eliminate pain, and maximize range of motion at injured tissue sites.",
    image: scarTissueImg,
    alt: "Instrument-assisted scar tissue mobilization",
    href: "/services/specialty-techniques/scar-tissue-mobilization"
  },
  {
    title: "Posture Re-education",
    description: "Train your body to stand, walk, sit, and lie in optimal positions to prevent pain, decrease forward head posture, and improve daily function and efficiency.",
    image: postureImg,
    alt: "Posture correction and spinal alignment therapy",
    href: "/services/specialty-techniques/posture-reeducation"
  },
  {
    title: "Neural Tension Release",
    description: "Italian-developed technique combining Eastern holistic philosophies to release high neural tension that presents as tight muscles, weakness, and jittery actions.",
    image: neuralImg,
    alt: "Neural tension release therapy session",
    href: "/services/specialty-techniques/neural-tension-release"
  },
  {
    title: "Therapy for Singers",
    description: "Unique Italian technique developed for professional singers. Decrease tension, improve your voice, lower stress, and sing longer with less fatigue. No other professionals in the US offer this specialized technique.",
    image: singersImg,
    alt: "Physical therapy for singers and vocal performers",
    href: "/services/specialty-techniques/therapy-for-singers"
  }
];
---

<BaseLayout title={pageTitle} description={pageDescription} breadcrumbs={breadcrumbs}>
  <WatermarkBackground variant="teal" />
  
  <!-- Hero Section -->
  <section class="service-hero">
    <div class="container-narrow">
      <h1>Specialty Techniques</h1>
      <p class="hero-subtitle">Advanced Therapeutic Methods</p>
    </div>
  </section>

  <!-- Main Content -->
  <section class="service-content section-spacing">
    <div class="container-narrow">
      <p class="lead">At Physica Medica, we offer advanced specialty techniques that go beyond traditional physical therapy. These evidence-based methods provide targeted pain relief and accelerate healing.</p>

      <div class="techniques-grid">
        {techniques.map((technique) => (
          <a href={technique.href} class="technique-card">
            <div class="technique-card-image">
              <Image 
                src={technique.image}
                alt={technique.alt}
                width={400}
                height={250}
                format="webp"
                quality={85}
                loading="lazy"
              />
            </div>
            <div class="technique-card-content">
              <h2>{technique.title}</h2>
              <p>{technique.description}</p>
              <span class="technique-link">Learn More â†’</span>
            </div>
          </a>
        ))}
      </div>

      <h2>Why Choose Specialty Techniques?</h2>
      <p>Specialty techniques are particularly effective for:</p>
      <ul>
        <li>Chronic pain that hasn't responded to traditional treatment</li>
        <li>Acute injuries requiring fast pain relief</li>
        <li>Athletic performance optimization</li>
        <li>Myofascial pain syndrome</li>
        <li>Tension headaches and migraines</li>
        <li>Post-surgical scar tissue</li>
      </ul>

      <div class="cta-box">
        <h3>Experience Advanced Pain Relief</h3>
        <p>Discover how specialty techniques can accelerate your healing and eliminate pain.</p>
        <a href="/schedule" class="cta-button">Schedule Consultation</a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .service-hero {
    position: relative;
    z-index: 1;
    background: transparent;
    color: white;
    padding: 3rem 2rem;
    text-align: center;
  }

  .service-content {
    position: relative;
    z-index: 1;
    padding: 0 1rem;
  }

  /* White content card for readability on teal watermark */
  .service-content .container-narrow {
    background: white;
    padding: 3rem;
    border-radius: 12px;
    box-shadow: 0 4px 24px rgba(0,0,0,0.1);
  }

  .service-hero h1 {
    color: white;
    margin-bottom: 0.5rem;
  }

  .hero-subtitle {
    font-size: 1.5rem;
    color: rgba(255,255,255,0.9);
  }

  .lead {
    font-size: 1.25rem;
    color: var(--color-text-secondary);
    text-align: center;
    margin-bottom: 3rem;
  }
  
  .cta-box {
    position: relative;
    z-index: 1;
  }

  .techniques-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(340px, 1fr));
    gap: 2rem;
    margin: 3rem 0;
  }

  .technique-card {
    display: block;
    background: var(--color-background-light);
    border-radius: 0.75rem;
    overflow: hidden;
    border: 1px solid var(--color-border);
    text-decoration: none;
    color: inherit;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .technique-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 16px 40px rgba(0, 0, 0, 0.12);
  }

  .technique-card-image {
    width: 100%;
    height: 220px;
    overflow: hidden;
    position: relative;
  }

  .technique-card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .technique-card:hover .technique-card-image img {
    transform: scale(1.05);
  }

  .technique-card-content {
    padding: 1.5rem;
  }

  .technique-card h2 {
    color: var(--color-primary);
    margin-bottom: 0.75rem;
    font-size: 1.35rem;
  }

  .technique-card p {
    color: var(--color-text-secondary);
    font-size: 0.95rem;
    line-height: 1.6;
    margin-bottom: 0;
  }

  .technique-link {
    display: inline-block;
    margin-top: 1rem;
    color: var(--color-accent);
    text-decoration: none;
    font-weight: 600;
    transition: transform 0.2s;
  }

  .technique-card:hover .technique-link {
    transform: translateX(4px);
  }

  .service-content h2 {
    color: var(--color-primary);
    margin-top: 2.5rem;
    margin-bottom: 1rem;
  }

  .service-content ul {
    margin: 1rem 0 2rem 1.5rem;
    line-height: 1.8;
  }

  .service-content li {
    margin-bottom: 0.5rem;
  }

  .cta-box {
    background: var(--color-background-light);
    padding: 2rem;
    border-radius: 0.5rem;
    border-left: 4px solid var(--color-accent);
    margin: 3rem 0;
    text-align: center;
  }

  .cta-box h3 {
    color: var(--color-primary);
    margin-bottom: 1rem;
  }

  @media (max-width: 768px) {
    .techniques-grid {
      grid-template-columns: 1fr;
    }
    
    .technique-card-image {
      height: 200px;
    }
  }
</style>
