    --theme-navy-light: #2d4a6f;
    --theme-gold: #d69e2e;
    --theme-gold-light: #f6e05e;
    --theme-slate: #4a5568;
  }

  /* Hero Section - Bold navy */
  .specialty-hero {
    position: relative;
    background: linear-gradient(135deg, var(--theme-navy) 0%, var(--theme-navy-light) 100%);
    padding: 2.5rem 2rem;
    overflow: hidden;
    z-index: 1;
  }

  .hero-gradient-bg {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(180deg, transparent 0%, rgba(214,158,46,0.1) 100%);
    pointer-events: none;
  }

  .hero-centered {
    text-align: center;
    position: relative;
    z-index: 1;
    color: white;
  }

  .hero-centered h1 {
    color: white;
    font-size: 2.75rem;
    margin-bottom: 0.5rem;
    text-transform: uppercase;
    letter-spacing: 2px;
    font-weight: 700;
  }

  .specialty-hero .hero-subtitle {
    font-size: 1.1rem;
    opacity: 0.9;
    margin-bottom: 1.25rem;
    color: var(--theme-gold-light);
    font-weight: 500;
    letter-spacing: 0.5px;
  }

  .hero-value-pills {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    justify-content: center;
    margin-bottom: 1.25rem;
  }

  .value-pill {
    background: var(--theme-gold);
    padding: 0.5rem 1rem;
    border-radius: 0;
    font-size: 0.85rem;
    color: var(--theme-navy);
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .hero-cta {
    display: inline-block;
    background: white;
    color: var(--theme-navy);
    padding: 14px 40px;
    text-decoration: none;
    font-weight: 700;
    border-radius: 0;
    transition: all 0.2s;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-size: 0.9rem;
    border: 2px solid white;
  }

  .hero-cta:hover {
    background: transparent;
    color: white;
  }

  .related-services {
    position: relative;
    z-index: 1;
  }

  /* Content sections */
  .content-section-white {
    background: white;
    padding: 3rem 2rem;
    position: relative;
    z-index: 1;
  }

  .content-section-gray {
    background: #f7fafc;
    padding: 3rem 2rem;
    position: relative;
    z-index: 1;
    border-top: 3px solid var(--theme-navy);
    border-bottom: 3px solid var(--theme-navy);
  }

  .content-section-teal {
    background: var(--theme-navy);
    padding: 3rem 2rem;
    position: relative;
    z-index: 1;
    color: white;
  }

  .content-section-teal h2 { 
    color: var(--theme-gold); 
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  /* Stat highlight section - Gold band */
  .content-section-stat {
    background: var(--theme-gold);
    padding: 1.75rem 2rem;
    position: relative;
    z-index: 1;
  }

  .stat-highlight-row {
    display: flex;
    justify-content: center;
    gap: 5rem;
    flex-wrap: wrap;
  }

  .stat-highlight-item {
    text-align: center;
    color: var(--theme-navy);
  }

  .big-stat {
    display: block;
    font-size: 3.5rem;
    font-weight: 800;
    color: var(--theme-navy);
    line-height: 1;
  }

  .stat-desc {
    display: block;
    font-size: 0.9rem;
    font-weight: 600;
    max-width: 180px;
    margin-top: 0.35rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .container-narrow {
    max-width: 900px;
    margin: 0 auto;
  }

  /* Section titles - Bold, uppercase */
  .section-title-center {
    text-align: center;
    color: var(--theme-navy);
    margin-bottom: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-weight: 700;
  }

  .section-intro {
    text-align: center;
    color: var(--theme-slate);
    margin-bottom: 2rem;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
  }

  .section-intro-light {
    text-align: center;
    color: rgba(255,255,255,0.9);
    margin-bottom: 2rem;
  }

  /* Content row */
  .content-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    align-items: center;
  }

  .content-row.reverse {
    direction: rtl;
  }

  .content-row.reverse > * {
    direction: ltr;
  }

  .content-row-image img {
    width: 100%;
    height: auto;
    border-radius: 0;
    box-shadow: 8px 8px 0 var(--theme-gold);
  }

  .content-row-text h2 {
    margin-top: 0;
    color: var(--theme-navy);
    text-transform: uppercase;
    letter-spacing: 0.5px;
    font-size: 1.5rem;
  }

  /* Cost grid - Two-tone cards */
  .cost-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1.25rem;
  }

  .cost-item {
    background: white;
    overflow: hidden;
    border: 2px solid var(--theme-navy);
  }

  .cost-icon {
    font-size: 1.75rem;
    background: var(--theme-navy);
    color: white;
    padding: 1rem;
    display: block;
  }

  .cost-item h4 {
    color: var(--theme-navy);
    margin: 0.75rem 1rem 0.35rem;
    font-size: 0.95rem;
    text-transform: uppercase;
    font-weight: 700;
  }

  .cost-item p {
    margin: 0 1rem 1rem;
    font-size: 0.85rem;
    color: var(--theme-slate);
  }

  /* Feature grid - Navy cards */
  .feature-grid-light {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.25rem;
  }

  .feature-item-light {
    background: rgba(255,255,255,0.1);
    padding: 1.25rem;
    border-left: 4px solid var(--theme-gold);
  }

  .feature-item-light strong {
    display: block;
    margin-bottom: 0.35rem;
    text-transform: uppercase;
    font-size: 0.9rem;
    letter-spacing: 0.5px;
  }

  .feature-item-light p {
    margin: 0;
    opacity: 0.9;
    font-size: 0.9rem;
  }

  /* Styled list - Bold separators */
  .styled-list {
    list-style: none;
    padding: 0;
    margin: 1rem 0 0;
  }

  .styled-list li {
    padding: 0.85rem 0;
    border-bottom: 2px solid #e2e8f0;
    line-height: 1.5;
  }

  .styled-list li:last-child {
    border-bottom: none;
  }

  .styled-list li strong {
    color: var(--theme-navy);
  }

  /* Step cards - Numbered boldly */
  .step-cards {
    display: grid;
    gap: 1rem;
    margin: 1.5rem 0 0;
  }

  .step-card {
    display: flex;
    gap: 1rem;
    align-items: flex-start;
    background: white;
    padding: 1.25rem;
    border: 2px solid #e2e8f0;
    border-left: 4px solid var(--theme-gold);
  }

  .step-number {
    width: 36px;
    height: 36px;
    background: var(--theme-navy);
    color: var(--theme-gold);
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 800;
    flex-shrink: 0;
    font-size: 1.1rem;
  }

  .step-content strong {
    color: var(--theme-navy);
    display: block;
    margin-bottom: 0.2rem;
    text-transform: uppercase;
    font-size: 0.9rem;
    letter-spacing: 0.5px;
  }

  .step-content p {
    margin: 0;
    font-size: 0.88rem;
    color: var(--theme-slate);
  }

  @media (max-width: 768px) {
    .hero-centered h1 {
      font-size: 2rem;
      letter-spacing: 1px;
    }

    .content-row {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .content-row.reverse {
      direction: ltr;
    }

    .content-row-image {
      order: -1;
    }

    .stat-highlight-row {
      gap: 2.5rem;
    }

    .big-stat {
      font-size: 2.75rem;
    }
  }

  /* Legacy support */
  .service-content .container-narrow {
    background: white;
    padding: 3rem;
    box-shadow: 0 4px 24px rgba(0,0,0,0.1);
  }

  .service-content h2:first-child {
    margin-top: 0;
  }

  .content-section-alt {
    background: #f7fafc;
    margin: 2rem -3rem;
    padding: 2rem 3rem;
    border-top: 2px solid var(--theme-navy);
    border-bottom: 2px solid var(--theme-navy);
  }

  .content-section-alt h2 {
    margin-top: 0;
  }

  .step-content p {
    margin: 0;
    font-size: 0.9rem;
    color: var(--color-text-secondary);
  }

  .image-right {
    float: right;
    margin: 0 0 1.5rem 2rem;
    max-width: 320px;
  }

  .image-right img {
    border-radius: 0.5rem;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
  }

  .image-left {
    float: left;
    margin: 0 2rem 1.5rem 0;
    max-width: 320px;
  }

  .image-left img {
    border-radius: 0.5rem;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
  }

  .image-inline {
    margin: 2.5rem auto;
    text-align: center;
    max-width: 450px;
  }

  .image-inline img {
    border-radius: 0.5rem;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
  }

  .clearfix {
    clear: both;
  }

  .service-hero {
    background: var(--color-background-light);
    color: var(--color-text-primary);
    padding: 3rem 2rem;
    text-align: center;
  }

  .service-hero h1 {
    color: var(--color-text-primary);
    margin-bottom: 0.5rem;
  }

  .hero-subtitle {
    font-size: 1.5rem;
    opacity: 0.9;
  }

  .service-content h2 {
    color: var(--color-primary);
    margin-top: 2.5rem;
    margin-bottom: 1rem;
  }

  .service-content h4 {
    color: var(--color-primary);
    margin-bottom: 0.75rem;
  }

  .service-content ul,
  .service-content ol {
    margin: 1rem 0 2rem 1.5rem;
    line-height: 1.8;
  }

  .service-content li {
    margin-bottom: 0.5rem;
  }

  .highlight-box {
    background: white;
    border: 2px solid var(--theme-gold);
    border-left: 4px solid var(--theme-gold);
    padding: 1.5rem 2rem;
    margin: 2rem 0;
  }

  .highlight-box h3 {
    color: var(--theme-navy);
    margin: 0 0 0.5rem;
    font-size: 1.1rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .highlight-box p {
    margin: 0;
    color: var(--theme-slate);
    font-size: 0.95rem;
