---
import BaseLayout from '../../layouts/BaseLayout.astro';
import WatermarkBackground from '../../components/WatermarkBackground.astro';
import { getCollection, getEntry } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('posts');
  return posts.map(post => {
    const slug = post.id.split('/').pop() || post.id;
    return {
      params: { slug },
      props: { post },
    };
  });
}

const { post } = Astro.props;
const { Content } = await post.render();

const title = `${post.data.title} | Physica Medica Blog`;
const description = post.data.excerpt || `Read ${post.data.title} on the Physica Medica blog.`;
const ogImage = post.data.coverImage || '/images/og-default.jpg';

const breadcrumbs = [
  { name: 'Home', url: '/' },
  { name: 'Blog', url: '/blog' },
  { name: post.data.title, url: `/blog/${post.id.split('/').pop() || post.id}` }
];

// Format date
const formattedDate = new Date(post.data.publishedDate).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});

// Article schema for SEO
const articleSchema = {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "headline": post.data.title,
  "datePublished": post.data.publishedDate.toISOString(),
  "description": post.data.excerpt || '',
  "image": post.data.coverImage ? new URL(post.data.coverImage, Astro.site).toString() : '',
  "author": {
    "@type": "Person",
    "name": "Dr. Maksim Birikov",
    "url": "https://physicamedica.net/about"
  },
  "publisher": {
    "@type": "Organization",
    "name": "Physica Medica",
    "url": "https://physicamedica.net"
  }
};
---

<BaseLayout 
  title={title} 
  description={description} 
  ogImage={ogImage}
  breadcrumbs={breadcrumbs}
  schema={articleSchema}
>
  <!-- Watermark Background -->
  <WatermarkBackground variant="teal" />

  <!-- Hero Section - Solid teal gradient -->
  <section class="post-hero">
    <div class="hero-bg"></div>
    <div class="container-narrow">
      <div class="hero-centered">
        <a href="/blog" class="back-link">← Back to Blog</a>
        <time datetime={post.data.publishedDate.toISOString()}>
          {formattedDate}
        </time>
        <h1>{post.data.title}</h1>
        {post.data.excerpt && (
          <p class="post-excerpt">{post.data.excerpt}</p>
        )}
      </div>
    </div>
  </section>

  <article class="blog-post">
    <div class="container">
      {post.data.coverImage && (
        <div class="post-cover-image">
          <img 
            src={post.data.coverImage} 
            alt={post.data.title}
          />
        </div>
      )}

      <div class="post-content-wrapper">
        <div class="post-content">
          <Content />
        </div>
      </div>

      <!-- CTA Section - Teal band -->
      <section class="post-cta-section">
        <p>Have questions about this topic?</p>
        <a href="/schedule" class="schedule-cta">Schedule a Consultation</a>
      </section>

      <footer class="post-footer">
        <a href="/blog" class="back-to-blog">← Back to Blog</a>
      </footer>
    </div>
  </article>
</BaseLayout>

<style>
  /* Hero Section - Solid teal gradient for clean header */
  .post-hero {
    position: relative;
    z-index: 2;
    padding: 100px 20px 60px;
    text-align: center;
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, #2d6d5f 0%, #1f4d42 100%);
    z-index: 0;
  }

  .hero-centered {
    position: relative;
    z-index: 1;
  }

  .back-link {
    display: inline-block;
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    font-size: 0.9rem;
    margin-bottom: 1.5rem;
    transition: color 0.2s ease;
  }

  .back-link:hover {
    color: white;
  }

  .post-hero time {
    display: inline-block;
    font-size: 0.85rem;
    color: var(--color-primary, #2d6d5f);
    font-weight: 600;
    margin-bottom: 1rem;
    background: rgba(255, 255, 255, 0.9);
    padding: 0.35rem 1rem;
    border-radius: 20px;
  }

  .post-hero h1 {
    font-size: 2.5rem;
    color: white;
    margin-bottom: 1rem;
    line-height: 1.25;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  .post-hero .post-excerpt {
    font-size: 1.15rem;
    color: rgba(255, 255, 255, 0.9);
    line-height: 1.6;
    max-width: 700px;
    margin: 0 auto;
  }

  /* Article Content */
  .blog-post {
    position: relative;
    z-index: 1;
    padding: 0 0 4rem;
  }

  .post-cover-image {
    max-width: 900px;
    margin: 0 auto 3rem;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 8px 40px rgba(0, 0, 0, 0.15);
    position: relative;
    z-index: 2;
  }

  .post-cover-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  .post-content-wrapper {
    background: rgba(255, 255, 255, 0.85);
    border-radius: 16px;
    max-width: 900px;
    margin: 0 auto;
    padding: 3rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  }

  .post-content {
    max-width: 700px;
    margin: 0 auto;
    font-size: 1.125rem;
    line-height: 1.85;
    color: var(--color-text-primary, #333);
  }

  .post-content :global(h2) {
    font-size: 1.85rem;
    color: var(--color-primary, #2d6d5f);
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid var(--color-accent, #3db89f);
  }

  .post-content :global(h3) {
    font-size: 1.4rem;
    color: var(--color-primary, #2d6d5f);
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }

  .post-content :global(p) {
    margin-bottom: 1.5rem;
  }

  .post-content :global(ul),
  .post-content :global(ol) {
    margin-bottom: 1.5rem;
    padding-left: 2rem;
  }

  .post-content :global(li) {
    margin-bottom: 0.5rem;
  }

  .post-content :global(a) {
    color: var(--color-accent, #3db89f);
    text-decoration: underline;
  }

  .post-content :global(a:hover) {
    color: var(--color-primary, #2d6d5f);
  }

  .post-content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 2rem 0;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
  }

  .post-content :global(blockquote) {
    border-left: 4px solid var(--color-accent, #3db89f);
    padding: 1rem 1.5rem;
    margin: 2rem 0;
    font-style: italic;
    color: var(--color-text-secondary);
    background: rgba(61, 184, 159, 0.08);
    border-radius: 0 8px 8px 0;
  }

  .post-content :global(code) {
    background: var(--color-background-light, #f5f5f5);
    padding: 0.2em 0.4em;
    border-radius: 4px;
    font-size: 0.9em;
    font-family: monospace;
  }

  .post-content :global(pre) {
    background: var(--color-background-light, #f5f5f5);
    padding: 1.5rem;
    border-radius: 8px;
    overflow-x: auto;
    margin: 2rem 0;
  }

  .post-content :global(pre code) {
    background: none;
    padding: 0;
  }

  /* CTA Section - Teal band */
  .post-cta-section {
    max-width: 900px;
    margin: 3rem auto;
    padding: 2.5rem;
    background: linear-gradient(135deg, #2d6d5f 0%, #1f4d42 100%);
    border-radius: 12px;
    text-align: center;
  }

  .post-cta-section p {
    color: rgba(255, 255, 255, 0.9);
    font-size: 1.1rem;
    margin-bottom: 1rem;
  }

  .schedule-cta {
    display: inline-block;
    background: white;
    color: var(--color-primary, #2d6d5f);
    padding: 0.85rem 2rem;
    border-radius: 8px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
  }

  .schedule-cta:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
    background: #f8f8f8;
  }

  /* Footer */
  .post-footer {
    max-width: 900px;
    margin: 0 auto;
    padding: 1.5rem 0;
    text-align: center;
  }

  .back-to-blog {
    color: var(--color-accent, #3db89f);
    text-decoration: none;
    font-weight: 600;
    transition: all 0.2s ease;
  }

  .back-to-blog:hover {
    color: var(--color-primary, #2d6d5f);
  }

  /* Container utilities */
  .container-narrow {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  @media (max-width: 768px) {
    .post-hero {
      padding: 90px 20px 40px;
    }

    .post-hero h1 {
      font-size: 1.75rem;
    }

    .post-hero .post-excerpt {
      font-size: 1rem;
    }

    .post-content-wrapper {
      padding: 2rem 1.5rem;
      border-radius: 12px;
      margin: 0 1rem;
    }

    .post-content {
      font-size: 1rem;
    }

    .post-content :global(h2) {
      font-size: 1.5rem;
    }

    .post-content :global(h3) {
      font-size: 1.25rem;
    }

    .post-cta-section {
      margin: 2rem 1rem;
      padding: 2rem 1.5rem;
    }

    .post-footer {
      margin: 0 1rem;
    }

    .post-cover-image {
      margin: 0 1rem 2rem;
    }
  }
</style>
