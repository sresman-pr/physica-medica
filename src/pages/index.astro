---
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = "Physical Therapy Boutique & Postural Correction Studio | Physica Medica Baltimore";
const pageDescription = "Baltimore's premier physical therapy boutique specializing in postural correction, dry needling, scoliosis treatment, and the Wim Hof Method. One-on-one treatments with Dr. Maksim Birikov, DPT.";
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <!-- Hero Section -->
  <section class="hero">
    <div class="hero-overlay-left">
      <img src="/images/9c4fc8_3f2a8ea4de1e42eca27b713faf27ef0e~mv2.png" alt="Anatomical diagram overlay" />
    </div>
    <div class="hero-overlay-right">
      <img src="/images/9c4fc8_3f2a8ea4de1e42eca27b713faf27ef0e~mv2.png" alt="Anatomical diagram overlay" />
    </div>
    <div class="hero-content">
      <img src="/images/Physica-Medica-logo.jpg" alt="Physica Medica Logo" class="hero-logo" width="300" height="120" />
      
      <h1 class="hero-title">
        Physical Therapy Boutique<br />
        Postural Correction Studio
      </h1>
      
      <p class="hero-cta-text">Call to book an appointment today!</p>
      <a href="tel:443-228-8029" class="cta-button">Call Now</a>
    </div>
  </section>

  <!-- Image Gallery Section -->
  <section class="image-gallery">
    <!-- Background Watermark Logos -->
    <div class="watermark-logo watermark-left">
      <img src="/images/Physica-Medica-logo.jpg" alt="" aria-hidden="true" />
    </div>
    <div class="watermark-logo watermark-right">
      <img src="/images/Physica-Medica-logo.jpg" alt="" aria-hidden="true" />
    </div>
    
    <!-- Top Row: 2 images side by side with button overlays -->
    <div class="gallery-row-2">
      <a href="/services" class="gallery-item">
        <img src="/images/Baltimore-Physical-Therapist-Dry-Needling-Dr-Maks-Birikov.png" alt="Physical therapy services" loading="lazy" />
        <div class="image-overlay-button">
          <span>Physical Therapy Services</span>
        </div>
      </a>
      <a href="/wim-hof-method" class="gallery-item">
        <img src="/images/Baltimore-Physical-Therapist-Wim-Hof-Certified-Dr-Maks-Birikov.png" alt="Wim Hof Method instruction" loading="lazy" />
        <div class="image-overlay-button">
          <span>Wim Hof Method Instruction</span>
        </div>
      </a>
    </div>

    <!-- Middle Row: 2 clinic images side by side -->
    <div class="gallery-row-2">
      <img src="/images/Baltimore-Physical-Therapist-fitness-equipment.png" alt="Physical therapy fitness equipment" loading="lazy" />
      <img src="/images/Baltimore-Physical-Therapist-clinic-2023.png" alt="Physica Medica clinic interior" loading="lazy" />
    </div>

    <!-- Bottom Row: 1 large training image with overlays -->
    <div class="gallery-row-1">
      <img src="/images/Baltimore-Physical-Therapist-Maks-and-Anthony.jpg" alt="Dr. Maks training with client" loading="lazy" />
      <div class="image-cta-overlays">
        <a href="/schedule" class="overlay-cta-button primary">Schedule Your First Appointment</a>
        <a href="/services" class="overlay-cta-button secondary">One-on-One Treatments</a>
      </div>
    </div>
  </section>

  <!-- Quote Section -->
  <section class="quote-section">
    <div class="container-narrow text-center">
      <blockquote>
        <h2>"The human body is an incredible machine."</h2>
        <cite>Maksim Birikov - Doctor of Physical Therapy</cite>
      </blockquote>
    </div>
  </section>

  <!-- Treatment Images Section -->
  <section class="treatment-images">
    <div class="treatment-grid-3">
      <div class="treatment-item">
        <a href="/services" class="treatment-image">
          <img src="/images/Baltimore-Physical-Therapist-physica-medica therapy-.png" alt="Physical therapy session" loading="lazy" />
        </a>
        <p class="treatment-label">Pregnancy Knowledge and Experience</p>
      </div>
      <div class="treatment-item">
        <a href="/services/specialty-techniques" class="treatment-image">
          <img src="/images/Baltimore-Physical-Therapist-cupping.png" alt="Cupping therapy" loading="lazy" />
        </a>
        <p class="treatment-label">Group Seminars or One on One</p>
      </div>
      <a href="/services" class="treatment-cta-box">
        <span>See All Treatments</span>
      </a>
    </div>
  </section>

  <!-- Personal Training Section -->
  <section class="training-section">
    <div class="training-grid">
      <div class="training-image">
        <img src="/images/Baltimore-Physical-Therapist-Maks-and-Anthony.jpg" alt="Personal training session" loading="lazy" />
      </div>
      <div class="training-content">
        <h3>Unique approach to personal training:</h3>
        <ul>
          <li>Optimize your biomechanics with respects to our evolutionary movement requirements</li>
          <li>Integrates your body as a system</li>
          <li>Improve communication between the muscles, fascia and gravity</li>
          <li>Correct movement dysfunctions that contribute to pain, improve posture, improve body aesthetics</li>
          <li>Move with minimal wear and tear on the body</li>
        </ul>
        <a href="/services/personal-training" class="training-cta-button">One on One Personal Training</a>
      </div>
    </div>
  </section>

  <!-- Reviews Section -->
  <section class="reviews-section section-spacing">
    <div class="container">
      <h2 class="text-center">5-STAR REVIEWS</h2>
      
      <div class="review-featured">
        <div class="review-image">
          <img src="/images/Baltimore-Physical-Therapist-session.png" alt="Physical therapy session" loading="lazy" />
        </div>
        <div class="review-content">
          <h3>Stefan Pearson</h3>
          <div class="star-rating">★★★★★</div>
          <p>"Maks has really separated himself in a distinguishable way when it comes to my experience with him. Contrary to the "surface" level - all in one treatment styles here in America - he has chosen to get to know me by building connective tissue through rapport and really dialing into my particular issue. Steady communication has been vital. He's listening and pivoting those same insights into an actionable plan."</p>
          <a href="/reviews" class="reviews-link">More Reviews Here</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Visit Us Hero Section -->
  <section class="visit-us-hero">
    <div class="visit-us-content">
      <h2>VISIT<br />US</h2>
      <p><strong>M W F:</strong> 8:00 AM - 7:30 PM</p>
      <p><strong>Tuesday:</strong> 10:00 AM - 7:30 PM</p>
      <p><strong>Thurs Sat Sun:</strong> Closed</p>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="contact-section">
    <div class="contact-grid">
      <div class="contact-info">
        <h2>PHYSICA MEDICA</h2>
        <h3>CONTACT</h3>
        <div class="contact-details">
          <p>
            800 S Bond St,<br />
            Baltimore, MD 21231
          </p>
          <p>
            <a href="tel:443-228-8029">443-228-8029</a><br />
            <a href="mailto:PhysicaMedica@gmail.com">PhysicaMedica@gmail.com</a>
          </p>
        </div>
        <div class="map-placeholder">
          <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3087.8982287474756!2d-76.59373492346204!3d39.27893197169948!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c8046c3c7d3f8d%3A0x8c8e8c8e8c8e8c8e!2s800%20S%20Bond%20St%2C%20Baltimore%2C%20MD%2021231!5e0!3m2!1sen!2sus!4v1234567890" width="100%" height="250" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
        </div>
      </div>
      <div class="contact-form">
        <form>
          <input type="text" placeholder="Name *" required />
          <input type="email" placeholder="Email *" required />
          <input type="text" placeholder="Subject" />
          <textarea placeholder="Message" rows="5"></textarea>
          <button type="submit" class="cta-button">Send</button>
        </form>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .hero {
    position: relative;
    background-image: linear-gradient(to bottom, rgba(45, 109, 95, 0.92), rgba(45, 109, 95, 0.85)), url('/images/Baltimore-Physical-Therapist-clinic-2023.png');
    background-size: cover;
    background-position: center;
    color: white;
    padding: 5rem 2rem;
    overflow: hidden;
  }

  .hero-content {
    position: relative;
    z-index: 2;
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }

  .hero-logo {
    max-width: 250px;
    height: auto;
    margin-bottom: 1.5rem;
  }

  .hero-title {
    color: white;
    font-size: 2.5rem;
    line-height: 1.2;
    margin: 1rem 0;
  }

  .hero-cta-text {
    font-size: 1.25rem;
    margin: 1.5rem 0;
  }

  .hero-overlay-left,
  .hero-overlay-right {
    position: absolute;
    top: 0;
    height: 100%;
    width: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0.15;
    pointer-events: none;
    z-index: 1;
  }

  .hero-overlay-left {
    left: 0;
    transform: translateX(-20%);
  }

  .hero-overlay-right {
    right: 0;
    transform: translateX(20%) scaleX(-1);
  }

  .hero-overlay-left img,
  .hero-overlay-right img {
    max-height: 100%;
    width: auto;
    object-fit: contain;
  }

  /* Gallery - Match Wix exactly */
  .image-gallery {
    padding: 0;
    background: #f5f5f5;
    max-width: 100%;
    position: relative;
  }

  /* Watermark Logos - Fixed position that scrolls with page */
  .watermark-logo {
    position: fixed;
    top: 50%;
    transform: translateY(-50%);
    opacity: 0.12;
    pointer-events: none;
    z-index: 0;
  }

  .watermark-left {
    left: 20px;
  }

  .watermark-right {
    right: 20px;
  }

  .watermark-logo img {
    width: 300px;
    height: auto;
    filter: grayscale(100%) brightness(1.2);
  }

  .gallery-row-2 {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 8px;
    margin-bottom: 8px;
    padding: 0;
    max-width: 1200px;
    margin-left: auto;
    margin-right: auto;
    position: relative;
    z-index: 1;
  }

  .gallery-row-2:first-child {
    padding-top: 8px;
  }

  .gallery-row-1 {
    position: relative;
    padding: 0 0 8px;
    max-width: 1200px;
    margin-left: auto;
    margin-right: auto;
    z-index: 1;
  }

  .gallery-item {
    position: relative;
    overflow: hidden;
    display: block;
    text-decoration: none;
  }

  .gallery-row-2 img {
    width: 100%;
    height: 250px;
    object-fit: cover;
    display: block;
  }

  /* First row (with overlay buttons) should be shorter */
  .gallery-row-2:first-child .gallery-item img {
    height: 150px;
  }

  .gallery-row-1 img {
    width: 100%;
    height: 450px;
    object-fit: cover;
    display: block;
  }

  .image-overlay-button {
    position: absolute;
    bottom: 15px;
    left: 15px;
    background: var(--color-accent);
    padding: 0.75rem 1.5rem;
    color: white;
    font-weight: 600;
    font-size: 0.9rem;
    letter-spacing: 0.05em;
    border-radius: 2px;
  }

  .gallery-item:hover .image-overlay-button {
    opacity: 0.9;
  }

  .image-cta-overlays {
    position: absolute;
    bottom: 20px;
    left: 20px;
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .overlay-cta-button {
    background: var(--color-accent);
    color: white;
    padding: 0.75rem 1.5rem;
    text-decoration: none;
    font-weight: 600;
    font-size: 0.9rem;
    border-radius: 2px;
    display: inline-block;
  }

  .overlay-cta-button:hover {
    opacity: 0.9;
  }

  @media (max-width: 768px) {
    .gallery-row-2 {
      grid-template-columns: 1fr;
      gap: 10px;
    }

    .gallery-row-2 img {
      height: 250px;
    }

    .gallery-row-1 img {
      height: 350px;
    }
  }

  /* Quote */
  .quote-section {
    padding: 4rem 2rem;
    background: white;
  }

  .quote-section blockquote {
    margin: 0;
  }

  .quote-section h2 {
    color: var(--color-text-primary);
    font-style: italic;
    margin-bottom: 1rem;
    font-weight: 400;
    font-size: 1.75rem;
  }

  .quote-section cite {
    font-style: normal;
    color: var(--color-text-secondary);
    font-weight: 600;
    font-size: 1rem;
  }

  /* Treatment Images with Labels */
  .treatment-images {
    padding: 40px 0;
    background: white;
  }

  .treatment-grid-3 {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 20px;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .treatment-item {
    text-align: center;
  }

  .treatment-image {
    display: block;
    overflow: hidden;
    margin-bottom: 15px;
  }

  .treatment-image img {
    width: 100%;
    height: 250px;
    object-fit: cover;
    display: block;
  }

  .treatment-label {
    font-size: 0.95rem;
    color: var(--color-text-primary);
    margin: 0;
    font-weight: 500;
  }

  .treatment-cta-box {
    background: var(--color-accent);
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    color: white;
    font-weight: 600;
    font-size: 1.1rem;
    padding: 2rem;
    text-align: center;
    min-height: 265px;
  }

  .treatment-cta-box:hover {
    opacity: 0.9;
  }

  /* Personal Training Section */
  .training-section {
    background: #f5f5f5;
    padding: 40px 20px;
  }

  .training-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
    max-width: 1200px;
    margin: 0 auto;
    align-items: center;
  }

  .training-image img {
    width: 100%;
    height: 400px;
    object-fit: cover;
  }

  .training-content {
    background: var(--color-accent);
    color: white;
    padding: 3rem 2.5rem;
  }

  .training-content h3 {
    color: white;
    margin-bottom: 1.5rem;
    font-size: 1.1rem;
  }

  .training-content ul {
    list-style: disc;
    padding-left: 1.5rem;
    margin: 0 0 2rem;
    color: white;
  }

  .training-content li {
    margin-bottom: 0.75rem;
    line-height: 1.6;
  }

  .training-cta-button {
    background: white;
    color: var(--color-accent);
    padding: 0.75rem 1.5rem;
    text-decoration: none;
    font-weight: 600;
    display: inline-block;
    border-radius: 2px;
  }

  .training-cta-button:hover {
    opacity: 0.9;
  }

  @media (max-width: 768px) {
    .treatment-grid-3 {
      grid-template-columns: 1fr;
    }

    .training-grid {
      grid-template-columns: 1fr;
    }
  }

  /* Reviews */
  .reviews-section {
    background: var(--color-primary);
    color: white;
  }

  .reviews-section h2 {
    color: white;
    letter-spacing: 0.1em;
  }

  .review-featured {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 2rem;
    margin-top: 2rem;
    align-items: center;
  }

  .review-image img {
    width: 100%;
    border-radius: 0.25rem;
  }

  .review-content h3 {
    color: white;
    margin-bottom: 0.5rem;
  }

  .review-content p {
    color: white;
  }

  .star-rating {
    color: #ffa500;
    font-size: 1.25rem;
    margin-bottom: 0.75rem;
  }

  .reviews-link {
    color: var(--color-accent);
    font-weight: 600;
    text-decoration: none;
  }

  .reviews-link:hover {
    text-decoration: underline;
  }

  /* Visit Us Hero Section */
  .visit-us-hero {
    background-image: linear-gradient(rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.3)), url('/images/physica-medica-location.png');
    background-size: cover;
    background-position: center;
    padding: 100px 20px;
    text-align: center;
    color: white;
  }

  .visit-us-content h2 {
    font-size: 4rem;
    font-weight: 700;
    color: white;
    margin-bottom: 2rem;
    line-height: 1;
    letter-spacing: 0.1em;
  }

  .visit-us-content p {
    font-size: 1.1rem;
    margin: 0.5rem 0;
    color: white;
  }

  /* Contact Section */
  .contact-section {
    background: white;
    padding: 60px 20px;
  }

  .contact-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 40px;
    max-width: 1200px;
    margin: 0 auto;
  }

  .contact-info h2 {
    color: var(--color-text-primary);
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
  }

  .contact-info h3 {
    color: var(--color-text-primary);
    font-size: 1.25rem;
    margin-bottom: 1.5rem;
  }

  .contact-details p {
    margin: 1rem 0;
    line-height: 1.8;
  }

  .contact-details a {
    color: var(--color-accent);
    text-decoration: none;
  }

  .contact-details a:hover {
    text-decoration: underline;
  }

  .map-placeholder {
    margin-top: 2rem;
  }

  .contact-form input,
  .contact-form textarea {
    width: 100%;
    padding: 0.75rem;
    margin-bottom: 1rem;
    border: 1px solid var(--color-border);
    border-radius: 2px;
    font-family: var(--font-sans);
  }

  .contact-form button {
    background: var(--color-accent);
    color: white;
    border: none;
    padding: 0.75rem 2rem;
    font-weight: 600;
    cursor: pointer;
  }

  .contact-form button:hover {
    opacity: 0.9;
  }

  @media (max-width: 768px) {
    .contact-grid {
      grid-template-columns: 1fr;
    }

    .visit-us-content h2 {
      font-size: 2.5rem;
    }
  }

  /* Utility */
  .text-center {
    text-align: center;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .gallery-grid {
      grid-template-columns: 1fr;
    }

    .treatment-grid {
      grid-template-columns: 1fr;
    }

    .review-featured {
      grid-template-columns: 1fr;
    }

    .hours-contact-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
