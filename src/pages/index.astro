---
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = "Physical Therapy Boutique & Postural Correction Studio | Physica Medica Baltimore";
const pageDescription = "Baltimore's premier physical therapy boutique specializing in postural correction, dry needling, scoliosis treatment, and the Wim Hof Method. One-on-one treatments with Dr. Maksim Birikov, DPT.";
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <!-- Top Background Image -->
  <section class="top-background">
    <img src="/images/physica-medica-location.png" alt="Physica Medica Location" />
  </section>

  <!-- Hero Section -->
  <section class="hero">
    <div class="hero-overlay-left">
      <img src="/images/9c4fc8_3f2a8ea4de1e42eca27b713faf27ef0e~mv2.png" alt="" aria-hidden="true" />
    </div>
    <div class="hero-overlay-right">
      <img src="/images/9c4fc8_3f2a8ea4de1e42eca27b713faf27ef0e~mv2.png" alt="" aria-hidden="true" />
    </div>
    <div class="hero-content">
      <div class="hero-logo-container">
        <span class="logo-text">PHYSICA</span>
        <img src="/images/Physica-Medica-logo.jpg" alt="Physica Medica Logo" class="hero-logo" />
        <span class="logo-text">MEDICA</span>
      </div>
      
      <h1 class="hero-title">
        Physical Therapy Boutique<br />
        Postural Correction Studio
      </h1>
      
      <p class="hero-cta-text">Call to book an appointment today!</p>
      <div class="hero-arrow">▼</div>
      <a href="tel:443-228-8029" class="cta-button">Call Now</a>
    </div>
  </section>

  <!-- Image Gallery Section with Watermarks -->
  <section class="gallery-section">
    <!-- Fixed Watermark Logos -->
    <div class="watermark watermark-left">
      <img src="/images/Physica-Medica-logo.jpg" alt="" aria-hidden="true" />
      <span class="watermark-text">PHYSICA<br/>MEDICA</span>
    </div>
    <div class="watermark watermark-right">
      <img src="/images/Physica-Medica-logo.jpg" alt="" aria-hidden="true" />
      <span class="watermark-text">PHYSICA<br/>MEDICA</span>
    </div>

    <div class="gallery-container">
      <!-- Row 1: Two small images with green buttons -->
      <div class="gallery-row row-small">
        <a href="/services" class="gallery-item">
          <img src="/images/Baltimore-Physical-Therapist-Dry-Needling-Dr-Maks-Birikov.png" alt="Physical therapy services" />
          <span class="gallery-label">Physical Therapy Services</span>
        </a>
        <a href="/wim-hof-method" class="gallery-item">
          <img src="/images/Baltimore-Physical-Therapist-Wim-Hof-Certified-Dr-Maks-Birikov.png" alt="Wim Hof Method instruction" />
          <span class="gallery-label">Wim Hof Method Instruction</span>
        </a>
      </div>

      <!-- Row 2: Two medium clinic images -->
      <div class="gallery-row row-medium">
        <div class="gallery-item">
          <img src="/images/Baltimore-Physical-Therapist-fitness-equipment.png" alt="Physical therapy fitness equipment" />
        </div>
        <div class="gallery-item">
          <img src="/images/Baltimore-Physical-Therapist-clinic-2023.png" alt="Physica Medica clinic interior" />
        </div>
      </div>

      <!-- Row 3: One large training image -->
      <div class="gallery-row row-large">
        <div class="gallery-item gallery-item-full">
          <img src="/images/Baltimore-Physical-Therapist-Maks-and-Anthony.jpg" alt="Dr. Maks training with client" />
          <div class="gallery-cta-stack">
            <a href="/services" class="gallery-cta">One-on-One Treatments</a>
            <a href="/schedule" class="gallery-cta">Schedule Your First Appointment</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Quote Section -->
  <section class="quote-section">
    <blockquote>
      <p class="quote-text">"The human body is an incredible machine."</p>
      <cite>Maksim Birikov - Doctor of Physical Therapy</cite>
    </blockquote>
  </section>

  <!-- Treatment Images Section -->
  <section class="treatment-section">
    <div class="treatment-grid">
      <a href="/services" class="treatment-item">
        <img src="/images/Baltimore-Physical-Therapist-physica-medica therapy-.png" alt="Physical therapy session" />
      </a>
      <a href="/services/specialty-techniques" class="treatment-item">
        <img src="/images/Baltimore-Physical-Therapist-cupping.png" alt="Cupping therapy" />
      </a>
      <a href="/services" class="treatment-cta">
        <span>See All Treatments</span>
      </a>
    </div>
    <div class="treatment-labels">
      <p>Pregnancy Knowledge and Experience</p>
      <p>Group Seminars or One on One</p>
    </div>
  </section>

  <!-- Personal Training Section -->
  <section class="training-section">
    <div class="training-wrapper">
      <div class="training-image">
        <img src="/images/physica-medica-location.png" alt="Physica Medica location" />
      </div>
      <div class="training-content">
        <p class="training-title">Unique approach to personal training:</p>
        <ul>
          <li>Optimize your biomechanics with respects to our evolutionary movement requirements</li>
          <li>Integrates your body as a system</li>
          <li>Improve communication between the muscles, fascia and gravity</li>
          <li>Correct movement dysfunctions that contribute to pain, improve posture, improve body aesthetics</li>
          <li>Move with minimal wear and tear on the body</li>
        </ul>
      </div>
    </div>
    <a href="/services/personal-training" class="training-cta">One on One Personal Training</a>
  </section>

  <!-- Reviews Section -->
  <section class="reviews-section">
    <h2>5-STAR REVIEWS</h2>
    <div class="review-card">
      <div class="review-image">
        <img src="/images/Baltimore-Physical-Therapist-session.png" alt="Physical therapy session" />
      </div>
      <div class="review-content">
        <h3>Stefan Pearson</h3>
        <div class="stars">★★★★★</div>
        <p>"Maks has really separated himself in a distinguishable way when it comes to my experience with him. Contrary to the "surface" level - all in one treatment styles here in America - he has chosen to get to know me by building connective tissue through rapport and really dialing into my particular issue. Steady communication has been vital. He's listening and pivoting those same insights into an actionable plan."</p>
        <a href="/reviews" class="review-link">More Reviews Here</a>
      </div>
    </div>
  </section>

  <!-- Visit Us Section -->
  <section class="visit-section">
    <div class="visit-overlay">
      <h2>VISIT<br/>US</h2>
      <p>M W F: 8:00 AM - 7:30 PM</p>
      <p>Tuesday: 10:00 AM - 7:30PM</p>
      <p>Thurs Sat Sun: Closed</p>
    </div>
  </section>

  <!-- Footer Contact Section -->
  <section class="contact-section">
    <div class="contact-wrapper">
      <div class="contact-left">
        <h2>PHYSICA MEDICA</h2>
        <h3>CONTACT</h3>
        <p>800 S Bond St,<br/>Baltimore, MD 21231</p>
        <p><a href="tel:443-228-8029">443-228-8029</a></p>
        <p><a href="mailto:PhysicaMedica@gmail.com">PhysicaMedica@gmail.com</a></p>
      </div>
      <div class="contact-right">
        <form class="contact-form">
          <input type="text" placeholder="Name *" required />
          <input type="email" placeholder="Email *" required />
          <input type="text" placeholder="Subject" />
          <textarea placeholder="Message" rows="4"></textarea>
          <button type="submit">Send</button>
        </form>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* ========== TOP BACKGROUND ========== */
  .top-background {
    width: 100%;
    overflow: hidden;
  }

  .top-background img {
    width: 100%;
    height: auto;
    display: block;
  }

  /* ========== HERO SECTION ========== */
  .hero {
    position: relative;
    background: #3d7a6b;
    padding: 60px 20px 80px;
    text-align: center;
    color: white;
    overflow: hidden;
  }

  .hero-overlay-left,
  .hero-overlay-right {
    position: absolute;
    top: 0;
    height: 100%;
    width: 350px;
    opacity: 0.2;
    pointer-events: none;
    display: flex;
    align-items: center;
  }

  .hero-overlay-left {
    left: 0;
    justify-content: flex-start;
  }

  .hero-overlay-right {
    right: 0;
    justify-content: flex-end;
    transform: scaleX(-1);
  }

  .hero-overlay-left img,
  .hero-overlay-right img {
    height: 90%;
    width: auto;
    object-fit: contain;
  }

  .hero-content {
    position: relative;
    z-index: 2;
  }

  .hero-logo-container {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 15px;
    margin-bottom: 25px;
  }

  .logo-text {
    font-size: 1.5rem;
    font-weight: 300;
    letter-spacing: 0.2em;
    color: white;
  }

  .hero-logo {
    width: 80px;
    height: auto;
  }

  .hero-title {
    font-size: 2.5rem;
    font-weight: 600;
    line-height: 1.2;
    margin: 0 0 20px;
    color: white;
  }

  .hero-cta-text {
    font-size: 1.1rem;
    margin: 0 0 15px;
    opacity: 0.9;
  }

  .hero-arrow {
    font-size: 1.5rem;
    margin: 15px 0;
    opacity: 0.7;
  }

  .cta-button {
    display: inline-block;
    background: var(--color-accent);
    color: white;
    padding: 14px 35px;
    text-decoration: none;
    font-weight: 600;
    border-radius: 3px;
    font-size: 1.1rem;
  }

  /* ========== GALLERY SECTION ========== */
  .gallery-section {
    background: #c8c8c8;
    padding: 0;
    position: relative;
  }

  .watermark {
    position: fixed;
    top: 50%;
    transform: translateY(-50%);
    opacity: 0.15;
    pointer-events: none;
    z-index: 1;
    text-align: center;
  }

  .watermark-left {
    left: 30px;
  }

  .watermark-right {
    right: 30px;
  }

  .watermark img {
    width: 200px;
    height: auto;
    filter: grayscale(100%);
    margin-bottom: 10px;
  }

  .watermark-text {
    display: block;
    font-size: 2rem;
    font-weight: 300;
    color: #999;
    letter-spacing: 0.1em;
    line-height: 1.2;
  }

  .gallery-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 10px;
  }

  .gallery-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 8px;
    margin-bottom: 8px;
  }

  .gallery-row.row-large {
    grid-template-columns: 1fr;
  }

  .gallery-item {
    position: relative;
    display: block;
    text-decoration: none;
    overflow: hidden;
  }

  .gallery-item img {
    width: 100%;
    display: block;
    object-fit: cover;
  }

  /* Row 1: Small images */
  .row-small .gallery-item img {
    height: 140px;
  }

  /* Row 2: Medium images */
  .row-medium .gallery-item img {
    height: 220px;
  }

  /* Row 3: Large image */
  .row-large .gallery-item img {
    height: 380px;
  }

  .gallery-label {
    position: absolute;
    bottom: 10px;
    left: 10px;
    background: var(--color-accent);
    color: white;
    padding: 8px 16px;
    font-size: 0.85rem;
    font-weight: 600;
  }

  .gallery-cta-stack {
    position: absolute;
    bottom: 20px;
    left: 20px;
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .gallery-cta {
    background: var(--color-accent);
    color: white;
    padding: 10px 20px;
    text-decoration: none;
    font-weight: 600;
    font-size: 0.9rem;
  }

  /* ========== QUOTE SECTION ========== */
  .quote-section {
    background: white;
    padding: 50px 20px;
    text-align: center;
  }

  .quote-section blockquote {
    margin: 0;
  }

  .quote-text {
    font-size: 1.5rem;
    font-style: italic;
    color: #333;
    margin: 0 0 10px;
  }

  .quote-section cite {
    font-style: normal;
    font-weight: 600;
    color: #666;
    letter-spacing: 0.05em;
  }

  /* ========== TREATMENT SECTION ========== */
  .treatment-section {
    background: white;
    padding: 30px 20px;
  }

  .treatment-grid {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 15px;
    max-width: 800px;
    margin: 0 auto;
  }

  .treatment-item {
    display: block;
  }

  .treatment-item img {
    width: 100%;
    height: 180px;
    object-fit: cover;
    display: block;
  }

  .treatment-cta {
    background: var(--color-accent);
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    color: white;
    font-weight: 600;
    font-size: 1rem;
    padding: 20px;
  }

  .treatment-labels {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 15px;
    max-width: 800px;
    margin: 15px auto 0;
    text-align: center;
  }

  .treatment-labels p {
    font-size: 0.9rem;
    color: #333;
    margin: 0;
  }

  /* ========== TRAINING SECTION ========== */
  .training-section {
    background: #e8e8e8;
    padding: 40px 20px;
    text-align: center;
  }

  .training-wrapper {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
    max-width: 800px;
    margin: 0 auto 20px;
  }

  .training-image img {
    width: 100%;
    height: 300px;
    object-fit: cover;
  }

  .training-content {
    background: var(--color-accent);
    color: white;
    padding: 25px;
    text-align: left;
  }

  .training-title {
    font-weight: 600;
    margin: 0 0 15px;
  }

  .training-content ul {
    margin: 0;
    padding-left: 20px;
    font-size: 0.9rem;
    line-height: 1.6;
  }

  .training-content li {
    margin-bottom: 8px;
  }

  .training-cta {
    display: inline-block;
    background: var(--color-accent);
    color: white;
    padding: 12px 25px;
    text-decoration: none;
    font-weight: 600;
    border: 2px solid var(--color-accent);
  }

  /* ========== REVIEWS SECTION ========== */
  .reviews-section {
    background: var(--color-primary);
    color: white;
    padding: 50px 20px;
    text-align: center;
  }

  .reviews-section h2 {
    color: white;
    letter-spacing: 0.15em;
    margin: 0 0 30px;
  }

  .review-card {
    max-width: 700px;
    margin: 0 auto;
    text-align: center;
  }

  .review-image img {
    width: 200px;
    height: 200px;
    object-fit: cover;
    margin: 0 auto 20px;
    display: block;
  }

  .review-content h3 {
    color: white;
    margin: 0 0 10px;
  }

  .stars {
    color: #ffc107;
    font-size: 1.5rem;
    margin-bottom: 15px;
  }

  .review-content p {
    font-size: 0.95rem;
    line-height: 1.7;
    margin: 0 0 20px;
    color: white;
  }

  .review-link {
    display: inline-block;
    background: var(--color-accent);
    color: white;
    padding: 10px 25px;
    text-decoration: none;
    font-weight: 600;
  }

  /* ========== VISIT SECTION ========== */
  .visit-section {
    background: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)), 
                url('/images/physica-medica-location.png');
    background-size: cover;
    background-position: center;
    padding: 80px 20px;
    text-align: center;
    color: white;
  }

  .visit-overlay h2 {
    font-size: 4rem;
    font-weight: 700;
    letter-spacing: 0.2em;
    margin: 0 0 30px;
    color: white;
    line-height: 1;
  }

  .visit-overlay p {
    font-size: 1.1rem;
    margin: 5px 0;
  }

  /* ========== CONTACT SECTION ========== */
  .contact-section {
    background: white;
    padding: 50px 20px;
  }

  .contact-wrapper {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 40px;
    max-width: 900px;
    margin: 0 auto;
  }

  .contact-left h2 {
    color: #333;
    margin: 0 0 5px;
  }

  .contact-left h3 {
    color: #333;
    margin: 0 0 20px;
  }

  .contact-left p {
    margin: 10px 0;
    line-height: 1.6;
  }

  .contact-left a {
    color: var(--color-accent);
    text-decoration: none;
  }

  .contact-form input,
  .contact-form textarea {
    width: 100%;
    padding: 12px;
    margin-bottom: 12px;
    border: 1px solid #ddd;
    font-family: inherit;
  }

  .contact-form button {
    background: var(--color-accent);
    color: white;
    border: none;
    padding: 12px 40px;
    font-weight: 600;
    cursor: pointer;
  }

  /* ========== RESPONSIVE ========== */
  @media (max-width: 768px) {
    .hero-title {
      font-size: 1.5rem;
    }

    .gallery-container {
      max-width: 100%;
    }

    .gallery-row {
      grid-template-columns: 1fr;
    }

    .row-small .gallery-item img,
    .row-medium .gallery-item img {
      height: 200px;
    }

    .row-large .gallery-item img {
      height: 280px;
    }

    .treatment-grid,
    .treatment-labels {
      grid-template-columns: 1fr;
    }

    .training-wrapper {
      grid-template-columns: 1fr;
    }

    .contact-wrapper {
      grid-template-columns: 1fr;
    }

    .watermark {
      display: none;
    }

    .visit-overlay h2 {
      font-size: 2.5rem;
    }
  }

  @media (min-width: 1400px) {
    .watermark-left {
      left: 60px;
    }

    .watermark-right {
      right: 60px;
    }
  }
</style>
