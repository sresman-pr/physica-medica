---
import BaseLayout from '../layouts/BaseLayout.astro';
import WatermarkBackground from '../components/WatermarkBackground.astro';
import StarRating from '../components/StarRating.astro';
import { getEntry } from 'astro:content';

// Fetch business info from Keystatic CMS
let businessInfo;
try {
  const entry = await getEntry('settings', 'business-info');
  businessInfo = entry?.data;
} catch (error) {
  businessInfo = undefined;
}

const hours = businessInfo?.businessHours || 'M W F: 8:00 AM - 7:30 PM\nTuesday: 10:00 AM - 7:30 PM\nThurs Sat Sun: Closed';
const hoursLines = hours.split('\n').filter((line: string) => line.trim());

const pageTitle = "Contact Physica Medica | Physical Therapy Baltimore | 443-228-8029";
const pageDescription = "Contact Physica Medica physical therapy in Baltimore. Call 443-228-8029 or visit us at 800 S Bond St, Baltimore, MD 21231.";
---

<BaseLayout title={pageTitle} description={pageDescription} hideFooter={true}>
  <WatermarkBackground variant="gray" />
  
  <!-- Hero Section -->
  <section class="contact-hero">
    <div class="hero-gradient-bg"></div>
    <div class="container-narrow">
      <div class="hero-centered">
        <h1>Contact Us</h1>
        <p class="hero-subtitle">Get in touch to schedule your appointment</p>
      </div>
    </div>
  </section>

  <!-- Main Contact Section -->
  <section class="contact-content">
    <div class="contact-wrapper">
      <!-- Left Column: Map + Info -->
      <div class="contact-left">
        <h2 class="contact-title">PHYSICA MEDICA</h2>
        <div class="map-container">
          <iframe 
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3088.1234!2d-76.5934!3d39.2834!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c8045e1f7c1a6f%3A0x8b9b3c7f8c7a8f9d!2s800%20S%20Bond%20St%2C%20Baltimore%2C%20MD%2021231!5e0!3m2!1sen!2sus!4v1234567890"
            width="100%" 
            height="300" 
            style="border:0;" 
            allowfullscreen="" 
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            title="Physica Medica Location Map"
          ></iframe>
        </div>
        <div class="contact-info">
          <p>800 S Bond St,<br/>Baltimore, MD 21231</p>
          <p><a href="tel:443-228-8029">443-228-8029</a> <span class="contact-note">(Call or Text)</span></p>
          <p><a href="mailto:PhysicaMedica@gmail.com">PhysicaMedica@gmail.com</a></p>
        </div>
        <div class="hours-box">
          <h3>Hours</h3>
          <p>
            {hoursLines.map((line: string, i: number) => (
              <Fragment>
                {line}
                {i < hoursLines.length - 1 && <br />}
              </Fragment>
            ))}
          </p>
        </div>
      </div>

      <!-- Right Column: Contact Form -->
      <div class="contact-right">
        <h2 class="contact-title">CONTACT</h2>
        <form class="contact-form" id="contact-form">
          <div class="form-row">
            <input type="text" name="name" placeholder="Name *" required aria-label="Your name" />
            <input type="email" name="email" placeholder="Email *" required aria-label="Your email" />
          </div>
          <input type="text" name="subject" placeholder="Subject" aria-label="Subject" />
          <textarea name="message" placeholder="Message" rows="5" aria-label="Your message"></textarea>
          <button type="submit" class="submit-btn">Send</button>
          <a href="https://www.google.com/maps?cid=17419763314734433010" target="_blank" rel="noopener noreferrer" class="reviews-link">
            <span class="stars"><StarRating /></span>
            <span>300+ Reviews</span>
          </a>
        </form>
        <div class="cta-buttons">
          <a href="tel:443-228-8029" class="cta-button">Call Now</a>
          <a href="sms:443-228-8029" class="cta-button">Text Us</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Simple Copyright -->
  <footer class="contact-footer">
    <p>&copy; {new Date().getFullYear()} Physica Medica. All rights reserved.</p>
  </footer>
</BaseLayout>

<style>
  /* Hero Section */
  .contact-hero {
    position: relative;
    background: linear-gradient(135deg, var(--color-primary) 0%, #1a3d35 100%);
    padding: 2.5rem 2rem;
    overflow: hidden;
    z-index: 1;
  }

  .hero-gradient-bg {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(ellipse at 50% 0%, rgba(61,184,159,0.15) 0%, transparent 60%);
    pointer-events: none;
  }

  .hero-centered {
    text-align: center;
    position: relative;
    z-index: 1;
    color: white;
  }

  .hero-centered h1 {
    color: white;
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    letter-spacing: -0.5px;
  }

  .hero-subtitle {
    font-size: 1.15rem;
    opacity: 0.9;
    color: white;
  }

  /* Main Contact Section */
  .contact-content {
    position: relative;
    z-index: 1;
    padding: 50px 20px 40px;
    background: var(--color-background-light);
  }

  .contact-wrapper {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    max-width: 1100px;
    margin: 0 auto;
  }

  .contact-title {
    color: var(--color-primary);
    font-size: 1.5rem;
    font-weight: 400;
    letter-spacing: 0.2em;
    margin: 0 0 8px;
    padding-bottom: 12px;
    border-bottom: 3px solid var(--color-primary);
    display: inline-block;
  }

  /* Left Column */
  .map-container {
    margin: 20px 0;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
  }

  .map-container iframe {
    display: block;
  }

  .contact-info {
    margin-top: 16px;
  }

  .contact-info p {
    margin: 8px 0;
    line-height: 1.6;
    font-size: 1rem;
    color: var(--color-text-primary);
  }

  .contact-info a {
    color: var(--color-text-primary);
    text-decoration: none;
    font-style: italic;
  }

  .contact-info a:hover {
    color: var(--color-accent);
  }

  .contact-note {
    color: var(--color-text-secondary);
    font-size: 0.9rem;
    font-style: italic;
  }

  .hours-box {
    margin-top: 1.5rem;
    padding: 1rem;
    background: white;
    border-radius: 8px;
    border-left: 3px solid var(--color-accent);
  }

  .hours-box h3 {
    color: var(--color-primary);
    margin: 0 0 0.5rem;
    font-size: 1rem;
  }

  .hours-box p {
    margin: 0;
    line-height: 1.8;
    font-size: 0.95rem;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    margin-top: 1.5rem;
  }

  .cta-button {
    flex: 1;
    display: inline-block;
    background: var(--color-accent);
    color: white;
    padding: 12px 20px;
    text-decoration: none;
    font-weight: 600;
    text-align: center;
    transition: all 0.2s;
  }

  .cta-button:hover {
    background: var(--color-accent-hover);
  }

  /* Right Column - Form */
  .contact-form {
    margin-top: 20px;
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 12px;
  }

  .contact-form input,
  .contact-form textarea {
    width: 100%;
    padding: 12px 14px;
    margin-bottom: 12px;
    border: 1px solid rgba(0,0,0,0.15);
    font-family: inherit;
    font-size: 0.95rem;
    transition: all 0.2s;
    background: white;
  }

  .contact-form input:focus,
  .contact-form textarea:focus {
    outline: none;
    border-color: var(--color-accent);
    box-shadow: 0 0 0 2px rgba(61, 184, 159, 0.1);
  }

  .contact-form textarea {
    resize: vertical;
    min-height: 140px;
  }

  .submit-btn {
    background: var(--color-accent);
    color: white;
    border: none;
    padding: 14px 40px;
    font-weight: 500;
    cursor: pointer;
    font-size: 1rem;
    transition: all 0.2s;
    width: 100%;
  }

  .submit-btn:hover {
    background: var(--color-accent-hover);
  }

  .reviews-link {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    background: white;
    padding: 10px 16px;
    border: 2px solid var(--color-accent);
    text-decoration: none;
    color: var(--color-text-primary);
    font-weight: 500;
    font-size: 0.9rem;
    margin-top: 12px;
    transition: all 0.2s;
    width: 100%;
  }

  .reviews-link:hover {
    background: var(--color-accent);
    color: white;
  }

  .reviews-link .stars {
    color: #ffc107;
  }

  .reviews-link:hover .stars {
    color: white;
  }

  /* Footer */
  .contact-footer {
    background: var(--color-background-light);
    padding: 1rem 20px;
    text-align: center;
    border-top: 1px solid var(--color-border);
    position: relative;
    z-index: 1;
  }

  .contact-footer p {
    margin: 0;
    font-size: 0.85rem;
    color: var(--color-text-secondary);
  }

  @media (max-width: 768px) {
    .hero-centered h1 {
      font-size: 2rem;
    }

    .contact-content {
      padding: 40px 20px 30px;
    }

    .contact-wrapper {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .form-row {
      grid-template-columns: 1fr;
      gap: 0;
    }

    .cta-buttons {
      flex-direction: column;
    }
  }
</style>
