---
import BaseLayout from '../layouts/BaseLayout.astro';
import WatermarkBackground from '../components/WatermarkBackground.astro';

const pageTitle = "Contact Physica Medica | Physical Therapy Baltimore | 443-228-8029";
const pageDescription = "Contact Physica Medica physical therapy in Baltimore. Call 443-228-8029 or visit us at 800 S Bond St, Baltimore, MD 21231.";
---

<BaseLayout title={pageTitle} description={pageDescription} hideFooter={true}>
  <WatermarkBackground variant="gray" />
  
  <section class="contact-hero">
    <div class="container-narrow text-center">
      <h1>CONTACT</h1>
      <p class="lead">Get in touch to schedule your appointment</p>
    </div>
  </section>

  <section class="contact-content section-spacing">
    <div class="container">
      <div class="contact-grid">
        <div class="contact-info">
          <h2>PHYSICA MEDICA</h2>
          
          <div class="info-section">
            <h3>Location</h3>
            <p>
              800 S Bond St,<br />
              Baltimore, MD 21231
            </p>
          </div>

          <div class="info-section">
            <h3>Hours</h3>
            <p>
              <strong>M W F:</strong> 8:00 AM - 7:30 PM<br />
              <strong>Tuesday:</strong> 10:00 AM - 7:30 PM<br />
              <strong>Thurs Sat Sun:</strong> Closed
            </p>
          </div>

          <div class="info-section">
            <h3>Contact</h3>
            <p>
              <a href="tel:443-228-8029">443-228-8029</a> <span class="contact-note">(Call or Text)</span><br />
              <a href="mailto:PhysicaMedica@gmail.com">PhysicaMedica@gmail.com</a>
            </p>
            <p class="text-friendly-note">Prefer texting? We're text-friendly! Send us a message at <a href="sms:443-228-8029">443-228-8029</a> for a quick response.</p>
          </div>

          <div class="cta-buttons">
            <a href="tel:443-228-8029" class="cta-button">Call Now</a>
            <a href="sms:443-228-8029" class="cta-button">Text Us</a>
            <a href="/schedule" class="cta-button">Schedule Online</a>
          </div>
        </div>

        <div class="map-container">
          <iframe 
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3088.1234!2d-76.5934!3d39.2834!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c8045e1f7c1a6f%3A0x8b9b3c7f8c7a8f9d!2s800%20S%20Bond%20St%2C%20Baltimore%2C%20MD%2021231!5e0!3m2!1sen!2sus!4v1234567890"
            width="100%" 
            height="450" 
            style="border:0; border-radius: 0.5rem;" 
            allowfullscreen="" 
            loading="lazy"
            title="Physica Medica Location Map"
          ></iframe>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .contact-hero {
    background: transparent;
    color: var(--color-text-primary);
    padding: 3rem 2rem;
    position: relative;
    z-index: 1;
  }

  .contact-hero h1 {
    color: var(--color-text-primary);
  }

  .lead {
    font-size: 1.25rem;
    opacity: 0.9;
  }

  .contact-content {
    position: relative;
    z-index: 1;
    padding: 0 1rem 2rem;
  }

  .contact-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    align-items: stretch;
  }

  /* White card for contact info */
  .contact-info {
    background: white;
    padding: 2.5rem;
    border-radius: 12px;
    box-shadow: 0 4px 24px rgba(0,0,0,0.1);
  }

  .contact-info h2 {
    color: var(--color-primary);
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 2px solid var(--color-accent);
  }

  .info-section {
    margin-bottom: 2rem;
  }

  .info-section h3 {
    color: var(--color-primary);
    font-size: 1.125rem;
    margin-bottom: 0.5rem;
  }

  .info-section p {
    line-height: 1.8;
  }

  .info-section a {
    color: var(--color-primary);
    text-decoration: none;
    font-weight: 500;
  }

  .info-section a:hover {
    text-decoration: underline;
    color: var(--color-accent);
  }

  .contact-note {
    color: var(--color-text-secondary);
    font-size: 0.9rem;
    font-style: italic;
  }

  .text-friendly-note {
    margin-top: 1rem;
    padding: 1rem;
    background: var(--color-background-light);
    border-radius: 0.5rem;
    border-left: 3px solid var(--color-accent);
    font-size: 0.95rem;
    line-height: 1.6;
  }

  .text-friendly-note a {
    color: var(--color-accent);
    font-weight: 600;
  }

  .cta-buttons {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    margin-top: 2rem;
    padding-top: 1.5rem;
    border-top: 1px solid rgba(0,0,0,0.08);
  }

  /* White card wrapper for map */
  .map-container {
    background: white;
    padding: 1rem;
    border-radius: 12px;
    box-shadow: 0 4px 24px rgba(0,0,0,0.1);
  }

  .map-container iframe {
    border-radius: 8px;
  }

  .text-center {
    text-align: center;
  }

  @media (max-width: 768px) {
    .contact-grid {
      grid-template-columns: 1fr;
    }

    .contact-info {
      padding: 2rem 1.5rem;
    }

    .cta-buttons {
      flex-direction: column;
    }
  }
</style>
