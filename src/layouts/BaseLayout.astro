---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import MobileCTA from '../components/MobileCTA.astro';
import BreadcrumbList from '../components/BreadcrumbList.astro';
import '../styles/global.css';

interface BreadcrumbItem {
  name: string;
  url: string;
}

interface Props {
  title: string;
  description: string;
  schema?: object | object[];
  ogImage?: string;
  breadcrumbs?: BreadcrumbItem[];
}

const { title, description, schema, ogImage = '/images/og-default.jpg', breadcrumbs } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);

// Default business schema for all pages
const businessSchema = {
  "@context": "https://schema.org",
  "@type": "MedicalBusiness",
  "@id": "https://physicamedica.net/#business",
  "name": "Physica Medica",
  "description": "Physical Therapy Boutique & Postural Correction Studio in Baltimore",
  "url": "https://physicamedica.net",
  "telephone": "443-228-8029",
  "email": "PhysicaMedica@gmail.com",
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "800 S Bond St",
    "addressLocality": "Baltimore",
    "addressRegion": "MD",
    "postalCode": "21231"
  },
  "geo": {
    "@type": "GeoCoordinates",
    "latitude": "39.2784",
    "longitude": "-76.6012"
  },
  "openingHoursSpecification": [
    {
      "@type": "OpeningHoursSpecification",
      "dayOfWeek": ["Monday", "Wednesday", "Friday"],
      "opens": "08:00",
      "closes": "19:30"
    },
    {
      "@type": "OpeningHoursSpecification",
      "dayOfWeek": "Tuesday",
      "opens": "10:00",
      "closes": "19:30"
    }
  ],
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": "5.0",
    "ratingCount": "300",
    "bestRating": "5"
  },
  "priceRange": "$$",
  "hasMap": "https://maps.google.com/?q=800+S+Bond+St+Baltimore+MD"
};

// Physician schema
const physicianSchema = {
  "@context": "https://schema.org",
  "@type": "Physician",
  "@id": "https://physicamedica.net/about/#physician",
  "name": "Dr. Maksim Birikov",
  "honorificPrefix": "Dr.",
  "jobTitle": "Doctor of Physical Therapy",
  "knowsAbout": [
    "Physical Therapy",
    "Dry Needling",
    "Cupping",
    "Postural Correction",
    "Scoliosis Treatment",
    "Wim Hof Method",
    "Pregnancy Physical Therapy"
  ],
  "worksFor": { "@id": "https://physicamedica.net/#business" }
};

// Combine schemas
const allSchemas = {
  "@context": "https://schema.org",
  "@graph": [
    businessSchema,
    physicianSchema,
    ...(schema ? (Array.isArray(schema) ? schema : [schema]) : [])
  ]
};
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Resource Hints for Performance -->
    <link rel="dns-prefetch" href="https://physicamedica.net">
    <link rel="preconnect" href="https://physicamedica.net" crossorigin>
    
    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(ogImage, Astro.site)} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Physica Medica" />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL(ogImage, Astro.site)} />
    
    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(allSchemas)} />
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    
    <!-- Critical CSS for Above-the-Fold Content -->
    <style is:inline>
      *{box-sizing:border-box}body{margin:0;font-family:-apple-system,BlinkMacSystemFont,'Segoe UI',Roboto,'Helvetica Neue',Arial,sans-serif;color:#2c2c2c;background:#fff;line-height:1.6;font-size:16px}.site-header{background:#fff;border-bottom:1px solid #e0e0e0;padding:1rem 0;position:sticky;top:0;z-index:40;transition:all .3s ease}.container{max-width:1280px;margin:0 auto;padding:0 2rem}.hero{position:relative;padding:80px 20px 100px;text-align:center;color:#fff;overflow:hidden}.hero-bg-image{position:absolute;top:0;left:0;width:100%;height:100%;object-fit:cover;z-index:0}.hero::before{content:'';position:absolute;top:0;left:0;right:0;bottom:0;background:linear-gradient(rgba(61,122,107,.75),rgba(61,122,107,.75));z-index:1}.hero-content{position:relative;z-index:2}.cta-button{display:inline-block;padding:.875rem 2rem;background:linear-gradient(135deg,#3db89f 0%,#2d9a85 100%);color:#fff;text-decoration:none;font-weight:600;border-radius:.375rem;transition:all .3s ease;border:none;cursor:pointer;box-shadow:0 2px 8px rgba(0,0,0,.08);letter-spacing:.02em}
    </style>
  </head>
  <body>
    <Header />
    {breadcrumbs && breadcrumbs.length > 0 && (
      <div class="container">
        <BreadcrumbList items={breadcrumbs} />
      </div>
    )}
    <main>
      <slot />
    </main>
    <Footer />
    <MobileCTA />
  </body>
</html>
