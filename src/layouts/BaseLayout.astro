---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import MobileCTA from '../components/MobileCTA.astro';
import BreadcrumbList from '../components/BreadcrumbList.astro';
import AnnouncementBar from '../components/AnnouncementBar.astro';
import '../styles/global.css';

interface BreadcrumbItem {
  name: string;
  url: string;
}

interface Props {
  title: string;
  description: string;
  schema?: object | object[];
  ogImage?: string;
  breadcrumbs?: BreadcrumbItem[];
  hideFooter?: boolean;
}

const { title, description, schema, ogImage = '/images/og-default.jpg', breadcrumbs, hideFooter = false } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);

// Default business schema for all pages
const businessSchema = {
  "@context": "https://schema.org",
  "@type": "MedicalBusiness",
  "@id": "https://physicamedica.net/#business",
  "name": "Physica Medica",
  "description": "Physical Therapy Boutique & Postural Correction Studio in Baltimore",
  "url": "https://physicamedica.net",
  "telephone": "443-228-8029",
  "email": "PhysicaMedica@gmail.com",
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "800 S Bond St",
    "addressLocality": "Baltimore",
    "addressRegion": "MD",
    "postalCode": "21231",
    "addressCountry": "US"
  },
  "geo": {
    "@type": "GeoCoordinates",
    "latitude": "39.2784",
    "longitude": "-76.6012"
  },
  "openingHoursSpecification": [
    {
      "@type": "OpeningHoursSpecification",
      "dayOfWeek": ["Monday", "Wednesday", "Friday"],
      "opens": "08:00",
      "closes": "19:30"
    },
    {
      "@type": "OpeningHoursSpecification",
      "dayOfWeek": "Tuesday",
      "opens": "10:00",
      "closes": "19:30"
    }
  ],
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": "5.0",
    "ratingCount": "300",
    "bestRating": "5"
  },
  "priceRange": "$$",
  "hasMap": "https://maps.google.com/?q=800+S+Bond+St+Baltimore+MD",
  "image": [
    "https://physicamedica.net/images/Baltimore-Physical-Therapist-clinic-2023.png",
    "https://physicamedica.net/images/Physica-Medica-logo.jpg"
  ],
  "sameAs": [
    "https://www.google.com/maps?cid=17419763314734433010"
  ],
  "paymentAccepted": ["Cash", "Credit Card", "HSA", "FSA"],
  "currenciesAccepted": "USD",
  "medicalSpecialty": [
    "Musculoskeletal",
    "Orthopedic",
    "Sports Medicine",
    "Physical Medicine and Rehabilitation"
  ],
  "areaServed": [
    {
      "@type": "City",
      "name": "Baltimore",
      "containedInPlace": {
        "@type": "State",
        "name": "Maryland"
      }
    },
    { "@type": "Neighborhood", "name": "Fells Point" },
    { "@type": "Neighborhood", "name": "Canton" },
    { "@type": "Neighborhood", "name": "Harbor East" },
    { "@type": "Neighborhood", "name": "Federal Hill" },
    { "@type": "Neighborhood", "name": "Inner Harbor" },
    { "@type": "Neighborhood", "name": "Patterson Park" },
    { "@type": "Neighborhood", "name": "Locust Point" },
    { "@type": "Neighborhood", "name": "Hampden" },
    { "@type": "Neighborhood", "name": "Roland Park" },
    { "@type": "Neighborhood", "name": "Towson" },
    { "@type": "Neighborhood", "name": "Downtown Baltimore" },
    { "@type": "Neighborhood", "name": "Highlandtown" }
  ],
  "serviceArea": {
    "@type": "GeoCircle",
    "geoMidpoint": {
      "@type": "GeoCoordinates",
      "latitude": "39.2784",
      "longitude": "-76.6012"
    },
    "geoRadius": "40233.6"
  }
};

// Physician schema
const physicianSchema = {
  "@context": "https://schema.org",
  "@type": "Physician",
  "@id": "https://physicamedica.net/about/#physician",
  "name": "Dr. Maksim Birikov",
  "honorificPrefix": "Dr.",
  "jobTitle": "Doctor of Physical Therapy",
  "knowsAbout": [
    "Physical Therapy",
    "Dry Needling",
    "Cupping",
    "Postural Correction",
    "Scoliosis Treatment",
    "Wim Hof Method",
    "Pregnancy Physical Therapy"
  ],
  "worksFor": { "@id": "https://physicamedica.net/#business" }
};

// Combine schemas
const allSchemas = {
  "@context": "https://schema.org",
  "@graph": [
    businessSchema,
    physicianSchema,
    ...(schema ? (Array.isArray(schema) ? schema : [schema]) : [])
  ]
};
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Resource Hints for Performance -->
    <link rel="dns-prefetch" href="https://physicamedica.net">
    <link rel="preconnect" href="https://physicamedica.net" crossorigin>
    <link rel="preconnect" href="https://www.google.com" crossorigin>
    <link rel="preconnect" href="https://maps.googleapis.com" crossorigin>
    <link rel="preconnect" href="https://fonts.googleapis.com" crossorigin>
    
    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />
    <meta name="author" content="Dr. Maksim Birikov, DPT" />
    
    <!-- Geo Meta Tags for Local SEO -->
    <meta name="geo.region" content="US-MD" />
    <meta name="geo.placename" content="Baltimore" />
    <meta name="geo.position" content="39.2784;-76.6012" />
    <meta name="ICBM" content="39.2784, -76.6012" />
    
    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(ogImage, Astro.site)} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Physica Medica" />
    <meta property="og:locale" content="en_US" />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL(ogImage, Astro.site)} />
    
    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(allSchemas)} />
    
    <!-- Favicon -->
    <link rel="icon" href="/favicon.ico" sizes="32x32" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="theme-color" content="#2d6d5f" />
  </head>
  <body>
    <AnnouncementBar />
    <Header />
    {breadcrumbs && breadcrumbs.length > 0 && (
      <div class="container">
        <BreadcrumbList items={breadcrumbs} />
      </div>
    )}
    <main>
      <slot />
    </main>
    {!hideFooter && <Footer />}
    <MobileCTA />
  </body>
</html>
