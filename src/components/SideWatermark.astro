---
interface Props {
  side: 'left' | 'right';
  variant?: 'light' | 'dark'; // light = for gray/white backgrounds, dark = for teal backgrounds
}

const { side, variant = 'light' } = Astro.props;
---

<div class={`side-watermark ${side} ${variant}`}>
  <div class="wm-group">
    <span class="wm-text">PHYSICA</span>
    <span class="wm-text">MEDICA</span>
    <div class="wm-logo"></div>
    <span class="wm-text">PHYSICA</span>
    <span class="wm-text">MEDICA</span>
  </div>
  <div class="wm-group">
    <span class="wm-text">PHYSICA</span>
    <span class="wm-text">MEDICA</span>
    <div class="wm-logo"></div>
    <span class="wm-text">PHYSICA</span>
    <span class="wm-text">MEDICA</span>
  </div>
</div>

<style>
  .side-watermark {
    position: absolute;
    top: 0;
    bottom: 0;
    width: 220px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 60px;
    pointer-events: none;
    z-index: 0;
  }

  .side-watermark.left {
    left: 15px;
  }

  .side-watermark.right {
    right: 15px;
  }

  .wm-group {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 4px;
  }

  .wm-text {
    font-family: var(--font-sans);
    font-size: 1.75rem;
    font-weight: 300;
    letter-spacing: 0.2em;
    text-align: center;
    line-height: 1.1;
  }

  /* Light variant - for gray/white backgrounds */
  .side-watermark.light .wm-text {
    color: rgba(0, 0, 0, 0.10);
  }

  .side-watermark.light .wm-logo {
    width: 160px;
    height: 160px;
    background-image: url('/images/Physica-Medica-logo.jpg');
    background-size: contain;
    background-position: center;
    background-repeat: no-repeat;
    filter: brightness(0) opacity(0.10);
    margin: 8px 0;
  }

  /* Dark variant - for teal backgrounds */
  .side-watermark.dark .wm-text {
    color: rgba(255, 255, 255, 0.12);
  }

  .side-watermark.dark .wm-logo {
    width: 160px;
    height: 160px;
    background-image: url('/images/Physica-Medica-logo.jpg');
    background-size: contain;
    background-position: center;
    background-repeat: no-repeat;
    opacity: 0.12;
    margin: 8px 0;
  }

  /* Hide on smaller screens */
  @media (max-width: 1100px) {
    .side-watermark {
      display: none;
    }
  }
</style>
