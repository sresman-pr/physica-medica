<style>
  .site-footer {
    position: relative;
    z-index: 1;
  }

  .footer-contact-section {
    background: var(--color-background-light);
    padding: 50px 20px 40px;
    border-top: 4px solid var(--color-primary);
    margin-top: 2rem;
  }

  .footer-wrapper {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    max-width: 1100px;
    margin: 0 auto;
  }

  .footer-title {
    color: var(--color-primary);
    font-size: 1.5rem;
    font-weight: 400;
    letter-spacing: 0.2em;
    margin: 0 0 8px;
    padding-bottom: 12px;
    border-bottom: 3px solid var(--color-primary);
    display: inline-block;
  }

  .footer-map {
    margin: 20px 0;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    border-radius: 8px;
  }

  .map-link-container {
    display: block;
    text-decoration: none;
  }

  .static-map-placeholder {
    background: linear-gradient(135deg, #e8f4f2 0%, #d4ebe6 100%);
    height: 200px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 8px;
    transition: all 0.2s;
    border: 2px solid var(--color-border);
  }

  .static-map-placeholder:hover {
    background: linear-gradient(135deg, #d4ebe6 0%, #c0e0d9 100%);
    border-color: var(--color-accent);
  }

  .map-pin {
    font-size: 2.5rem;
  }

  .map-text {
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-primary);
  }

  .map-cta {
    font-size: 0.85rem;
    color: var(--color-accent);
    font-weight: 500;
  }

  .footer-info {
    margin-top: 16px;
  }

  .footer-info p {
    margin: 8px 0;
    line-height: 1.6;
    font-size: 1rem;
    color: var(--color-text-primary);
  }

  .footer-info a {
    color: var(--color-text-primary);
    text-decoration: none;
    font-style: italic;
  }

  .footer-info a:hover {
    color: var(--color-accent);
  }

  .footer-form {
    margin-top: 20px;
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 12px;
  }

  .footer-form input,
  .footer-form textarea {
    width: 100%;
    padding: 12px 14px;
    margin-bottom: 12px;
    border: 2px solid #6c757d;
    font-family: inherit;
    font-size: 0.95rem;
    transition: all 0.2s;
    background: white;
  }

  .footer-form input:focus,
  .footer-form textarea:focus {
    outline: none;
    border-color: var(--color-accent);
    box-shadow: 0 0 0 2px rgba(61, 184, 159, 0.1);
  }

  .footer-form textarea {
    resize: vertical;
    min-height: 120px;
  }

  .footer-submit-btn {
    background: var(--color-accent);
    color: white;
    border: none;
    padding: 14px 40px;
    font-weight: 500;
    cursor: pointer;
    font-size: 1rem;
    transition: all 0.2s;
    width: 100%;
  }

  .footer-submit-btn:hover {
    background: var(--color-accent-hover);
  }

  .footer-reviews-link {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    background: white;
    padding: 10px 16px;
    border: 2px solid var(--color-accent);
    text-decoration: none;
    color: var(--color-text-primary);
    font-weight: 500;
    font-size: 0.9rem;
    margin-top: 12px;
    transition: all 0.2s;
    width: 100%;
  }

  .footer-reviews-link:hover {
    background: var(--color-accent);
    color: white;
  }

  .footer-reviews-link .stars {
    color: #ffc107;
  }

  .footer-reviews-link:hover .stars {
    color: white;
  }

  .footer-service-areas {
    background: var(--color-background-light);
    padding: 1rem 20px;
    text-align: center;
    border-top: 1px solid var(--color-border);
  }

  .service-areas-wrapper {
    max-width: 1100px;
    margin: 0 auto;
    font-size: 0.8rem;
    color: var(--color-text-secondary);
    line-height: 1.8;
  }

  .service-areas-label {
    font-weight: 500;
    color: var(--color-text-secondary);
    margin-right: 0.25rem;
  }

  .service-areas-wrapper a {
    color: var(--color-text-secondary);
    text-decoration: none;
    transition: color 0.2s;
  }

  .service-areas-wrapper a:hover {
    color: var(--color-accent);
  }

  .service-areas-wrapper .divider {
    margin: 0 0.35rem;
    opacity: 0.5;
  }

  .footer-bottom {
    background: var(--color-background-light);
    padding: 1rem 20px;
    text-align: center;
    border-top: 1px solid var(--color-border);
  }

  .footer-bottom-content {
    max-width: 1100px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .copyright {
    margin: 0;
    font-size: 0.85rem;
    color: var(--color-text-secondary);
  }

  .footer-legal-links {
    font-size: 0.85rem;
  }

  .footer-legal-links a {
    color: var(--color-text-secondary);
    text-decoration: none;
    transition: color 0.2s;
  }

  .footer-legal-links a:hover {
    color: var(--color-accent);
  }

  .footer-legal-links .divider {
    margin: 0 0.5rem;
    opacity: 0.5;
  }

  @media (max-width: 768px) {
    .footer-contact-section {
      padding: 40px 20px 30px;
    }

    .footer-wrapper {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .form-row {
      grid-template-columns: 1fr;
      gap: 0;
    }

    .footer-bottom-content {
      flex-direction: column;
      text-align: center;
    }
  }
</style>
