    text-decoration: none;
    transition: color 0.2s;
  }

  .footer-section a:hover {
    color: var(--color-accent);
  }

  .footer-bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.2);
    padding-top: 1.5rem;
    text-align: center;
