---
// Footer Component
import { getEntry } from 'astro:content';

// Fetch business info from Keystatic CMS
let businessInfo;
try {
  const entry = await getEntry('settings', 'business-info');
  businessInfo = entry?.data;
} catch (error) {
  // If content doesn't exist yet, businessInfo will be undefined
  businessInfo = undefined;
}

// Fallback values if CMS data isn't available yet
const phone = businessInfo?.phoneNumber || '443-228-8029';
const email = businessInfo?.email || 'PhysicaMedica@gmail.com';
const hours = businessInfo?.businessHours || 'M W F: 8:00 AM - 7:30 PM\nTuesday: 10:00 AM - 7:30 PM\nThurs Sat Sun: Closed';
const address = businessInfo?.officeAddress || '800 S Bond St\nBaltimore, MD 21231';

// Convert newlines to <br /> for display
const formatMultiline = (text: string) => text.split('\n').filter(line => line.trim());
---

<footer class="site-footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-section">
        <h3>Contact</h3>
        <p>
          {formatMultiline(address).map((line, index) => (
            <Fragment>
              {line}
              {index < formatMultiline(address).length - 1 && <br />}
            </Fragment>
          ))}
        </p>
        <p>
          <a href={`tel:${phone.replace(/[^0-9]/g, '')}`}>{phone}</a><br />
          <a href={`mailto:${email}`}>{email}</a>
        </p>
      </div>

      <div class="footer-section">
        <h3>Hours</h3>
        <p>
          {formatMultiline(hours).map((line, index) => (
            <Fragment>
              {line}
              {index < formatMultiline(hours).length - 1 && <br />}
            </Fragment>
          ))}
        </p>
      </div>

      <div class="footer-section">
        <h3>Visit Us</h3>
        <p>
          <a href="https://maps.google.com/?q=800+S+Bond+St+Baltimore+MD+21231" target="_blank" rel="noopener">
            View on Google Maps
          </a>
        </p>
        <div class="social-proof">
          <a href="https://www.google.com/maps?cid=17419763314734433010" target="_blank" rel="noopener noreferrer" class="rating-badge-link">
            <div class="rating-badge">
              <span class="stars">★★★★★</span>
              <span class="rating-text">300+ Reviews</span>
            </div>
          </a>
        </div>
      </div>
    </div>

    <div class="footer-bottom">
      <p>&copy; {new Date().getFullYear()} Physica Medica. All rights reserved.</p>
    </div>
  </div>
</footer>

<style>
  .site-footer {
    background: var(--color-background-light);
    color: var(--color-text-primary);
    padding: 3rem 0 1.5rem;
    margin-top: 0;
    border-top: 1px solid var(--color-border);
  }

  .footer-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 3rem;
    margin-bottom: 2rem;
  }

  .footer-section h3 {
    color: var(--color-primary);
    font-size: 1.25rem;
    margin-bottom: 1.25rem;
    font-weight: 600;
  }

  .footer-section p {
    margin-bottom: 0.75rem;
    line-height: 1.8;
    color: var(--color-text-primary);
  }

  .footer-section a {
    color: var(--color-accent);
    text-decoration: none;
    transition: all var(--transition-fast);
    position: relative;
    font-weight: 500;
  }

  .footer-section a:hover {
    color: var(--color-accent-hover);
    padding-left: 4px;
  }

  .social-proof {
    margin-top: 1.5rem;
  }

  .rating-badge-link {
    text-decoration: none;
    display: inline-block;
    transition: transform var(--transition-fast);
  }

  .rating-badge-link:hover {
    transform: translateY(-2px);
    padding-left: 0;
  }

  .rating-badge {
    display: inline-flex;
    flex-direction: column;
    align-items: flex-start;
    background: white;
    padding: 12px 16px;
    border-radius: 8px;
    border: 2px solid var(--color-accent);
    transition: all var(--transition-fast);
    box-shadow: var(--shadow-sm);
  }

  .rating-badge-link:hover .rating-badge {
    background: var(--color-accent);
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  .rating-badge .stars {
    color: #ffc107;
    font-size: 1.25rem;
    margin-bottom: 4px;
  }

  .rating-badge-link:hover .rating-badge .stars {
    color: white;
  }

  .rating-badge .rating-text {
    font-size: 0.9rem;
    color: var(--color-text-primary);
    font-weight: 500;
  }

  .rating-badge-link:hover .rating-badge .rating-text {
    color: white;
  }

  .footer-bottom {
    border-top: 1px solid var(--color-border);
    padding-top: 1.5rem;
    text-align: center;
    font-size: 0.9rem;
    color: var(--color-text-secondary);
  }

  .footer-bottom p {
    margin: 0;
  }

  @media (max-width: 768px) {
    .footer-content {
      gap: 2rem;
    }
  }
</style>
