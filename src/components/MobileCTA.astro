---
// Mobile CTA Bar Component - Sticky bottom bar for mobile devices
import Icon from './Icon.astro';
---

<div class="mobile-cta-bar">
  <a href="tel:443-228-8029" class="cta-call">
    <Icon name="phone" size={18} /> Call Now
  </a>
  <a href="/schedule" class="cta-schedule">
    <Icon name="clock" size={18} /> Schedule Evaluation
  </a>
</div>

<style>
  .mobile-cta-bar {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 50;
    display: grid;
    grid-template-columns: 1fr 1fr;
    height: 64px;
    background: var(--color-accent);
    box-shadow: 0 -4px 16px rgba(0, 0, 0, 0.15);
    backdrop-filter: blur(10px);
  }

  .mobile-cta-bar a {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    font-weight: 600;
    color: var(--color-text-on-dark);
    text-decoration: none;
    font-size: 1.05rem;
    transition: all var(--transition-fast);
    /* Ensure touch targets are at least 44x44px */
    min-height: 44px;
  }

  .cta-call {
    background: var(--color-accent);
    border-right: 1px solid rgba(255, 255, 255, 0.3);
  }

  .cta-schedule {
    background: linear-gradient(135deg, var(--color-secondary) 0%, #1a3d35 100%);
  }

  .cta-call:active,
  .cta-schedule:active {
    background: var(--color-accent-hover);
    transform: scale(0.98);
  }

  /* Hide on desktop */
  @media (min-width: 768px) {
    .mobile-cta-bar {
      display: none;
    }
  }
</style>
